@page "/staff/contacts"
@model App.Web.Areas.Staff.Pages.Contacts.Index

@{
    ViewData["Title"] = "Contacts";
    ViewData["ActiveMenu"] = "Contacts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Contacts</h1>
    <a asp-page="@RouteNames.Contacts.Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> New Contact
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control" 
                           placeholder="Search by name, email, phone, or ID..." 
                           value="@ViewContext.HttpContext.Request.Query["search"]" />
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Organization</th>
                        <th>Tickets</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.ListView.Items.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                <i class="bi bi-people fs-1 d-block mb-2"></i>
                                No contacts found
                            </td>
                        </tr>
                    }
                    @foreach (var contact in Model.ListView.Items)
                    {
                        <tr>
                            <td>
                                <a asp-page="@RouteNames.Contacts.Details" asp-route-id="@contact.Id" class="fw-semibold">
                                    #@contact.Id
                                </a>
                            </td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@contact.Id">
                                    @contact.Name
                                </a>
                            </td>
                            <td>@contact.Email</td>
                            <td>@contact.PrimaryPhone</td>
                            <td>@contact.OrganizationAccount</td>
                            <td>
                                @if (contact.TicketCount > 0)
                                {
                                    <span class="badge bg-primary">@contact.TicketCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>@contact.CreationTime</td>
                            <td>
                                <a asp-page="@RouteNames.Contacts.Details" asp-route-id="@contact.Id" class="btn btn-sm btn-outline-primary">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.ListView.TotalCount > 0)
    {
        <div class="card-footer d-flex justify-content-between align-items-center">
            <span class="text-muted">Showing @Model.ListView.Items.Count() of @Model.ListView.TotalCount contacts</span>
        </div>
    }
</div>

