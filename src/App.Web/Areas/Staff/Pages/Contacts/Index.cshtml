@page "/staff/contacts"
@model App.Web.Areas.Staff.Pages.Contacts.Index
@using App.Web.Areas.Staff.Pages.Shared.Models
@using App.Web.Areas.Shared.Models

@{
    ViewData["Title"] = "Contacts";
    ViewData["ActiveMenu"] = "Contacts";
}

<div class="staff-page-heading mb-4">
    <h1 class="h3 mb-0">Contacts</h1>
    <a asp-page="@RouteNames.Contacts.Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>New Contact
    </a>
</div>

<!-- Search -->
<div class="staff-card mb-4">
    <div class="staff-card-body">
        <form method="get" class="row g-3">
            <div class="col-lg-6 col-md-8">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="search" class="form-control border-start-0 ps-0"
                           placeholder="Search by name, email, phone, or ID..."
                           value="@ViewContext.HttpContext.Request.Query["search"]" />
                </div>
            </div>
            <div class="col-lg-2 col-md-4">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-search me-1"></i>Search
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Contacts Table -->
<div class="staff-card">
    <div class="table-responsive">
        <table class="table staff-table mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Organization</th>
                    <th class="text-center">Tickets</th>
                    <th>Created</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.ListView.Items.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center py-5 text-muted">
                            <i class="bi bi-people" style="font-size: 3rem; opacity: 0.5;"></i>
                            <p class="mt-3 mb-0 fw-medium">No contacts found</p>
                            <p class="small">Try adjusting your search or create a new contact</p>
                        </td>
                    </tr>
                }
                @foreach (var contact in Model.ListView.Items)
                {
                    <tr>
                        <td>
                            <a asp-page="@RouteNames.Contacts.Details" asp-route-id="@contact.Id"
                               class="fw-semibold text-decoration-none" style="color: var(--staff-primary);">
                                #@contact.Id
                            </a>
                        </td>
                        <td>
                            <a asp-page="./Details" asp-route-id="@contact.Id" 
                               class="text-dark text-decoration-none fw-medium">
                                @contact.Name
                            </a>
                        </td>
                        <td class="text-muted">@(contact.Email ?? "—")</td>
                        <td class="text-muted">@(contact.PrimaryPhone ?? "—")</td>
                        <td class="text-muted">@(contact.OrganizationAccount ?? "—")</td>
                        <td class="text-center">
                            @if (contact.TicketCount > 0)
                            {
                                <span class="staff-badge staff-badge-primary">@contact.TicketCount</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td class="text-muted small">@contact.CreationTime</td>
                        <td class="text-end">
                            <a asp-page="@RouteNames.Contacts.Details" asp-route-id="@contact.Id"
                               class="btn btn-sm btn-outline-primary">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.ListView.TotalCount > 0)
    {
        <partial name="_Partials/TablePagination" model="@Model.ListView" />
    }
</div>
