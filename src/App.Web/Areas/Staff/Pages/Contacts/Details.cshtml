@page "/staff/contacts/{id:long}"
@model App.Web.Areas.Staff.Pages.Contacts.Details

@{
    ViewData["Title"] = $"Contact #{Model.Contact.Id}";
    ViewData["ActiveMenu"] = "Contacts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">
            <span class="text-muted">#@Model.Contact.Id</span>
            @Model.Contact.Name
        </h1>
    </div>
    <div class="d-flex gap-2">
        <a asp-page="@RouteNames.Contacts.Edit" asp-route-id="@Model.Contact.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i> Edit
        </a>
        <a asp-page="@RouteNames.Contacts.Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>
</div>

<div class="row">
    <!-- Main Content -->
    <div class="col-md-8">
        <!-- Associated Tickets -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Tickets (@Model.Tickets.Count())</h5>
                <a asp-area="Staff" asp-page="@RouteNames.Tickets.Create" asp-route-contactId="@Model.Contact.Id" 
                   class="btn btn-sm btn-primary">
                    <i class="bi bi-plus me-1"></i> New Ticket
                </a>
            </div>
            <div class="card-body p-0">
                @if (!Model.Tickets.Any())
                {
                    <p class="text-muted text-center py-4">No tickets for this contact.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in Model.Tickets)
                                {
                                    <tr>
                                        <td>
                                            <a asp-area="Staff" asp-page="@RouteNames.Tickets.Details" asp-route-id="@ticket.Id">
                                                #@ticket.Id
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-area="Staff" asp-page="@RouteNames.Tickets.Details" asp-route-id="@ticket.Id">
                                                @(ticket.Title.Length > 40 ? ticket.Title.Substring(0, 37) + "..." : ticket.Title)
                                            </a>
                                        </td>
                                        <td><span class="badge @GetStatusBadgeClass(ticket.Status)">@ticket.StatusLabel</span></td>
                                        <td><span class="badge @GetPriorityBadgeClass(ticket.Priority)">@ticket.PriorityLabel</span></td>
                                        <td>@ticket.CreationTime.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        <!-- Comments -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Notes (@Model.Comments.Count())</h5>
            </div>
            <div class="card-body">
                @if (Model.Comments.Any())
                {
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <strong>@comment.AuthorStaffName</strong>
                                    <small class="text-muted ms-2">
                                        @comment.CreationTime.ToString("MMM dd, yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                            <p class="mb-0" style="white-space: pre-wrap;">@comment.Body</p>
                        </div>
                    }
                }

                <form method="post" asp-page-handler="AddComment" asp-route-id="@Model.Contact.Id" class="mt-3">
                    <div class="mb-3">
                        <label class="form-label">Add a note</label>
                        <textarea asp-for="CommentForm.Body" class="form-control" rows="3" 
                                  placeholder="Add a note about this contact..."></textarea>
                        <span asp-validation-for="CommentForm.Body" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus me-1"></i> Add Note
                    </button>
                </form>
            </div>
        </div>

        <!-- Change Log -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Activity Log (@Model.ChangeLog.Count())</h5>
            </div>
            <div class="card-body">
                @if (!Model.ChangeLog.Any())
                {
                    <p class="text-muted">No activity recorded.</p>
                }
                else
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var entry in Model.ChangeLog)
                        {
                            <li class="border-bottom pb-2 mb-2">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong>@(entry.ActorStaffName ?? "System")</strong>
                                        <span class="text-muted">@entry.Message</span>
                                    </div>
                                    <small class="text-muted">
                                        @entry.CreationTime.ToString("MMM dd, yyyy HH:mm")
                                    </small>
                                </div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- Contact Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Contact Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-4">Email</dt>
                    <dd class="col-8">
                        @if (!string.IsNullOrEmpty(Model.Contact.Email))
                        {
                            <a href="mailto:@Model.Contact.Email">@Model.Contact.Email</a>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>

                    <dt class="col-4">Phone</dt>
                    <dd class="col-8">
                        @if (Model.Contact.PhoneNumbers.Any())
                        {
                            @foreach (var phone in Model.Contact.PhoneNumbers)
                            {
                                <div><a href="tel:@phone">@phone</a></div>
                            }
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>

                    <dt class="col-4">Address</dt>
                    <dd class="col-8" style="white-space: pre-wrap;">@(Model.Contact.Address ?? "—")</dd>

                    <dt class="col-4">Organization</dt>
                    <dd class="col-8">@(Model.Contact.OrganizationAccount ?? "—")</dd>

                    <dt class="col-4">Created</dt>
                    <dd class="col-8">@Model.Contact.CreationTime.ToString("MMM dd, yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>

        @if (Model.Contact.DmeIdentifiers.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">DME Identifiers</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        @foreach (var kvp in Model.Contact.DmeIdentifiers)
                        {
                            <dt class="col-5">@kvp.Key</dt>
                            <dd class="col-7">@kvp.Value</dd>
                        }
                    </dl>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status) => status switch
    {
        "open" => "bg-primary",
        "in_progress" => "bg-info",
        "pending" => "bg-warning text-dark",
        "resolved" => "bg-success",
        "closed" => "bg-secondary",
        _ => "bg-light text-dark"
    };

    string GetPriorityBadgeClass(string priority) => priority switch
    {
        "urgent" => "bg-danger",
        "high" => "bg-warning text-dark",
        "normal" => "bg-info",
        "low" => "bg-light text-dark",
        _ => "bg-light text-dark"
    };
}

