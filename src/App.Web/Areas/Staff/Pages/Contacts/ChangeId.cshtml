@page "/staff/contacts/{id:long}/change-id"
@model App.Web.Areas.Staff.Pages.Contacts.ChangeId
@using App.Web.Areas.Staff.Pages.Shared.Models

@{
    ViewData["Title"] = $"Change Contact ID #{Model.Form.CurrentId}";
    ViewData["ActiveMenu"] = "Contacts";

    var backToListUrl = Model.BackToListUrl;
    var routeValues = new Microsoft.AspNetCore.Routing.RouteValueDictionary { { "id", Model.Form.CurrentId } };
    if (!string.IsNullOrEmpty(backToListUrl))
    {
        routeValues["backToListUrl"] = backToListUrl;
    }

    var back = new BackLinkOptions
    {
        Page = RouteNames.Contacts.Edit,
        RouteValues = routeValues,
        Text = "Back to Edit"
    };
}

<partial name="_Partials/PageHeading" model='$"Change Contact ID"' />

<div class="row">
    <div class="col-xl-7 col-lg-8">
        <div class="staff-card">
            <div class="staff-card-body">
                @(await Html.PartialAsync("_Partials/BackToList", back))

                <!-- Warning Alert -->
                <div class="alert alert-warning d-flex align-items-start gap-3 mt-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill fs-4 flex-shrink-0" style="color: #856404;"></i>
                    <div>
                        <h6 class="alert-heading mb-2" style="font-weight: 600;">Important: This action is permanent</h6>
                        <p class="mb-2">
                            Changing the contact ID will:
                        </p>
                        <ul class="mb-2">
                            <li>Create a new contact record with the new ID</li>
                            <li>Move all associated tickets to the new contact</li>
                            <li>Transfer all notes and activity history</li>
                            <li><strong>Permanently delete</strong> the original contact record (ID #@Model.Form.CurrentId)</li>
                        </ul>
                        <p class="mb-0 small">
                            <strong>Note:</strong> The new ID must not already exist in the system.
                        </p>
                    </div>
                </div>

                <!-- Current Contact Info -->
                <div class="card border-0 mb-4" style="background: #f8fafc;">
                    <div class="card-body">
                        <h6 class="text-muted mb-3" style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.5px;">
                            Current Contact
                        </h6>
                        <div class="d-flex align-items-center gap-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center"
                                style="width: 48px; height: 48px; background: var(--staff-primary); color: white; font-weight: 700; font-size: 1.25rem;">
                                @(Model.Contact.Name.FirstOrDefault().ToString().ToUpper())
                            </div>
                            <div>
                                <div class="fw-semibold" style="font-size: 1.1rem;">
                                    <span style="color: var(--staff-primary);">#@Model.Contact.Id</span>
                                    @Model.Contact.Name
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Contact.Email))
                                {
                                    <div class="text-muted small">@Model.Contact.Email</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <form method="post" class="mt-4">
                    <input type="hidden" asp-for="Form.CurrentId" />
                    <input type="hidden" asp-for="BackToListUrl" />

                    <div class="mb-4">
                        <label asp-for="Form.NewId" class="form-label">
                            New Contact ID <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Form.NewId" type="number" class="form-control form-control-lg" 
                            min="1" placeholder="Enter the new contact ID number" 
                            style="font-weight: 600; font-size: 1.25rem;" />
                        <span asp-validation-for="Form.NewId" class="text-danger small"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="bi bi-info-circle me-1"></i>
                            Enter a positive number that is not already in use by another contact.
                        </small>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-warning" 
                            onclick="return confirm('Are you sure you want to change this contact\'s ID? This action cannot be undone.');">
                            <i class="bi bi-arrow-repeat me-2"></i>Change Contact ID
                        </button>
                        <a asp-page="@RouteNames.Contacts.Edit" asp-route-id="@Model.Form.CurrentId"
                            asp-route-backToListUrl="@Model.BackToListUrl"
                            class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Side Info Panel -->
    <div class="col-xl-5 col-lg-4">
        <div class="staff-card">
            <div class="staff-card-header">
                <h5><i class="bi bi-question-circle me-2"></i>When to Use This</h5>
            </div>
            <div class="staff-card-body">
                <p class="text-muted mb-3">
                    Use this feature when a contact was created with an incorrect ID number
                    and needs to be corrected to match external records or systems.
                </p>
                <h6 class="mb-2" style="font-size: 0.875rem;">Common scenarios:</h6>
                <ul class="text-muted small mb-0">
                    <li class="mb-2">Correcting a data entry mistake</li>
                    <li class="mb-2">Syncing with an external patient management system</li>
                    <li class="mb-2">Resolving duplicate contact records</li>
                    <li>Migrating data from another system</li>
                </ul>
            </div>
        </div>
    </div>
</div>


