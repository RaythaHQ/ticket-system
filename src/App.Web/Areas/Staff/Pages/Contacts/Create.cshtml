@page "/staff/contacts/create"
@model App.Web.Areas.Staff.Pages.Contacts.Create
@using App.Web.Areas.Staff.Pages.Shared.Models

@{
    ViewData["Title"] = "Create Contact";
    ViewData["ActiveMenu"] = "Contacts";

    var back = new BackLinkOptions
    {
        Page = RouteNames.Contacts.Index,
        Text = "Back to Contacts"
    };
}

<partial name="_Partials/PageHeading" model='"Create Contact"' />

<div class="row">
    <div class="col-xl-7 col-lg-8">
        <div class="staff-card">
            <div class="staff-card-body">
                @(await Html.PartialAsync("_Partials/BackToList", back))

                <form method="post" class="mt-4">
                    <div class="mb-4">
                        <label asp-for="Form.Id" class="form-label">Contact ID</label>
                        <input asp-for="Form.Id" type="number" class="form-control" placeholder="Leave blank for auto-generated" />
                        <span asp-validation-for="Form.Id" class="text-danger small"></span>
                        <small class="text-muted d-block mt-1">Optional. Leave blank to auto-generate an ID.</small>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Form.FirstName" class="form-label">
                                First Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Form.FirstName" class="form-control" placeholder="First name" />
                            <span asp-validation-for="Form.FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Form.LastName" class="form-label">Last Name</label>
                            <input asp-for="Form.LastName" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="Form.LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Form.Email" class="form-label">Email</label>
                        <input asp-for="Form.Email" type="email" class="form-control" placeholder="email@example.com" />
                        <span asp-validation-for="Form.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <partial name="_PhoneNumbersEditor" model="Model.Form.PhoneNumbersList" />
                    </div>

                    <div class="mb-4">
                        <label asp-for="Form.Address" class="form-label">Address</label>
                        <textarea asp-for="Form.Address" class="form-control" rows="2"
                            placeholder="Street address, city, state, zip"></textarea>
                        <span asp-validation-for="Form.Address" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Form.OrganizationAccount" class="form-label">Organization / Account</label>
                        <input asp-for="Form.OrganizationAccount" class="form-control"
                            placeholder="Company or organization name" />
                        <span asp-validation-for="Form.OrganizationAccount" class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-2"></i>Create Contact
                        </button>
                        <a asp-page="@RouteNames.Contacts.Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
