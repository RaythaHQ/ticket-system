@model IEnumerable<App.Application.Contacts.ContactChangeLogEntryDto>

<ul class="list-unstyled mb-0">
    @if (!Model.Any())
    {
        <li class="text-muted">No activity recorded.</li>
    }
    @foreach (var entry in Model)
    {
        <li class="border-bottom pb-2 mb-2">
            <div class="d-flex justify-content-between">
                <div>
                    <strong>@(entry.ActorStaffName ?? "System")</strong>
                    <span class="text-muted">@entry.Message</span>
                </div>
                <small class="text-muted">
                    @entry.CreationTime.ToString("MMM dd, yyyy HH:mm")
                </small>
            </div>
        </li>
    }
</ul>
