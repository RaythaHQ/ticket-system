@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/tributejs@5.1.3/dist/tribute.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.getElementById('comment-textarea');
            if (!textarea) return;
            
            // Debounce function to limit API calls
            function debounce(func, wait) {
                let timeout;
                return function(...args) {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(this, args), wait);
                };
            }
            
            // Cache for search results
            let searchCache = {};
            
            const tribute = new Tribute({
                trigger: '@@',
                allowSpaces: true,
                menuShowMinLength: 0,
                values: debounce(function(text, cb) {
                    // Check cache first
                    const cacheKey = text.toLowerCase();
                    if (searchCache[cacheKey]) {
                        cb(searchCache[cacheKey]);
                        return;
                    }
                    
                    fetch(`?handler=SearchMentionables&query=${encodeURIComponent(text)}`)
                        .then(response => response.json())
                        .then(data => {
                            const items = [];
                            
                            // Add teams first
                            data.teams.forEach(team => {
                                items.push({
                                    key: team.name,
                                    value: team.name,
                                    type: 'team',
                                    meta: `${team.memberCount} member${team.memberCount !== 1 ? 's' : ''}`
                                });
                            });
                            
                            // Then add users
                            data.users.forEach(user => {
                                items.push({
                                    key: user.name,
                                    value: user.name,
                                    type: 'user',
                                    meta: user.email
                                });
                            });
                            
                            // Cache the results
                            searchCache[cacheKey] = items;
                            cb(items);
                        })
                        .catch(err => {
                            console.error('Error fetching mentionables:', err);
                            cb([]);
                        });
                }, 200),
                lookup: 'key',
                fillAttr: 'value',
                selectTemplate: function(item) {
                    return '@@' + item.original.value;
                },
                menuItemTemplate: function(item) {
                    const iconClass = item.original.type === 'team' ? 'bi-people-fill' : 'bi-person-fill';
                    const typeClass = item.original.type;
                    return `
                        <span class="mention-icon ${typeClass}">
                            <i class="bi ${iconClass}"></i>
                        </span>
                        <span class="mention-name">${item.string}</span>
                        <span class="mention-meta">${item.original.meta || ''}</span>
                    `;
                },
                noMatchTemplate: ''
            });
            
            tribute.attach(textarea);
        });

        // Follower management functionality
        document.addEventListener('DOMContentLoaded', function() {
            const addBtn = document.getElementById('add-follower-btn');
            const dropdown = document.getElementById('add-follower-dropdown');
            const searchInput = document.getElementById('follower-search-input');
            const resultsContainer = document.getElementById('follower-search-results');
            const ticketId = @Model.Ticket.Id;
            
            if (!addBtn || !dropdown) return;
            
            // Get current follower IDs to filter them out of search results
            const currentFollowerIds = new Set([
                @foreach (var follower in Model.Followers)
                {
                    @:  '@follower.StaffAdminId',
                }
            ]);
            
            // Toggle dropdown
            addBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                const isVisible = dropdown.style.display !== 'none';
                dropdown.style.display = isVisible ? 'none' : 'block';
                if (!isVisible) {
                    searchInput.value = '';
                    searchInput.focus();
                    searchFollowers('');
                }
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!dropdown.contains(e.target) && e.target !== addBtn) {
                    dropdown.style.display = 'none';
                }
            });
            
            // Debounce function
            function debounce(func, wait) {
                let timeout;
                return function(...args) {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(this, args), wait);
                };
            }
            
            // Search for users
            const searchFollowers = debounce(function(query) {
                resultsContainer.innerHTML = '<div class="follower-dropdown-loading"><i class="bi bi-arrow-repeat"></i> Searching...</div>';
                
                fetch(`?handler=SearchMentionables&query=${encodeURIComponent(query)}`)
                    .then(response => response.json())
                    .then(data => {
                        // Filter out teams and already-following users
                        const availableUsers = data.users.filter(u => !currentFollowerIds.has(u.id));
                        
                        if (availableUsers.length === 0) {
                            resultsContainer.innerHTML = '<div class="follower-dropdown-empty">No users found</div>';
                            return;
                        }
                        
                        resultsContainer.innerHTML = availableUsers.map(user => `
                            <form method="post" action="?handler=AddFollower&id=${ticketId}&staffAdminId=${user.id}" class="follower-add-form">
                                <button type="submit" class="follower-dropdown-item">
                                    <div class="avatar">${(user.name || '?').charAt(0).toUpperCase()}</div>
                                    <div class="info">
                                        <div class="name">${escapeHtml(user.name)}</div>
                                        <div class="email">${escapeHtml(user.email || '')}</div>
                                    </div>
                                </button>
                            </form>
                        `).join('');
                        
                        // Add anti-forgery token to forms
                        document.querySelectorAll('.follower-add-form').forEach(form => {
                            const tokenInput = document.createElement('input');
                            tokenInput.type = 'hidden';
                            tokenInput.name = '__RequestVerificationToken';
                            tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
                            form.appendChild(tokenInput);
                        });
                    })
                    .catch(err => {
                        console.error('Error searching users:', err);
                        resultsContainer.innerHTML = '<div class="follower-dropdown-empty">Error searching users</div>';
                    });
            }, 200);
            
            // Handle search input
            searchInput.addEventListener('input', function() {
                searchFollowers(this.value);
            });
            
            // HTML escape helper
            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text || '';
                return div.innerHTML;
            }
        });

        // Initialize presence tracking for this ticket
        if (window.AppNotifications) {
            window.AppNotifications.joinTicketView(@Model.Ticket.Id);
        }

        // Leave ticket view when navigating away
        window.addEventListener('beforeunload', function() {
            if (window.AppNotifications) {
                window.AppNotifications.leaveTicketView(@Model.Ticket.Id);
            }
        });

        // SLA Extension inline UI functionality
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('sla-extend-toggle');
            const collapsedSection = document.getElementById('sla-extend-collapsed');
            const expandedSection = document.getElementById('sla-extend-expanded');
            const cancelBtn = document.getElementById('sla-extend-cancel');
            const hoursInput = document.getElementById('extension-hours-input');
            const previewContainer = document.getElementById('sla-preview');
            const previewDate = document.getElementById('sla-preview-date');
            const previewError = document.getElementById('sla-preview-error');
            const ticketId = @Model.Ticket.Id;
            const maxHours = @(Model.SlaExtensionInfo.HasUnlimitedExtensions ? "null" : Model.SlaExtensionInfo.MaxExtensionHours.ToString());
            
            if (!toggleBtn) return;
            
            // Toggle expand/collapse
            toggleBtn.addEventListener('click', function() {
                collapsedSection.style.display = 'none';
                expandedSection.style.display = 'block';
                hoursInput.focus();
                hoursInput.select();
                updatePreview();
            });
            
            cancelBtn.addEventListener('click', function() {
                expandedSection.style.display = 'none';
                collapsedSection.style.display = 'block';
                previewContainer.style.display = 'none';
                previewError.style.display = 'none';
            });
            
            // Debounced preview update
            let previewTimeout;
            function updatePreview() {
                const hours = parseInt(hoursInput.value, 10);
                
                clearTimeout(previewTimeout);
                
                if (isNaN(hours) || hours <= 0) {
                    previewContainer.style.display = 'none';
                    previewError.style.display = 'block';
                    previewError.textContent = 'Hours must be greater than zero';
                    return;
                }
                
                // Check max hours limit for non-privileged users
                if (maxHours !== null && hours > maxHours) {
                    previewContainer.style.display = 'none';
                    previewError.style.display = 'block';
                    previewError.textContent = `Extension cannot exceed ${maxHours} hours`;
                    return;
                }
                
                previewTimeout = setTimeout(function() {
                    fetch(`?handler=PreviewSlaExtension&id=${ticketId}&hours=${hours}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.valid) {
                                previewContainer.style.display = 'block';
                                previewDate.textContent = '→ ' + data.dueDateFormatted;
                                previewError.style.display = 'none';
                            } else {
                                previewContainer.style.display = 'none';
                                previewError.style.display = 'block';
                                previewError.textContent = data.error;
                            }
                        })
                        .catch(err => {
                            console.error('Preview error:', err);
                            previewError.style.display = 'block';
                            previewError.textContent = 'Failed to calculate preview';
                            previewContainer.style.display = 'none';
                        });
                }, 150);
            }
            
            hoursInput.addEventListener('input', updatePreview);
            hoursInput.addEventListener('change', updatePreview);
        });
    </script>
}
