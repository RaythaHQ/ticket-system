@page "/staff/tickets/{id:long}"
@model App.Web.Areas.Staff.Pages.Tickets.Details
@using App.Web.Areas.Staff.Pages.Shared.Models
@using App.Domain.ValueObjects
@inject App.Application.Common.Interfaces.IFileStorageProviderSettings FileStorageProviderSettings

@{
    ViewData["Title"] = $"Ticket #{Model.Ticket.Id}";
    ViewData["ActiveMenu"] = "Tickets";

    var backToListUrl = ViewData["BackToListUrl"]?.ToString();
    var back = new BackLinkOptions
    {
        Page = RouteNames.Tickets.Index,
        Text = "Back to Tickets",
        Href = !string.IsNullOrEmpty(backToListUrl) ? backToListUrl : null
    };
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-start mb-4 flex-wrap gap-3">
    <div>
        @(await Html.PartialAsync("_Partials/BackToList", back))
        <h1 class="h3 mb-2" style="font-weight: 700;">
            <span style="color: var(--staff-primary);">#@Model.Ticket.Id</span>
            @Model.Ticket.Title
        </h1>
        <div class="d-flex gap-2 align-items-center flex-wrap">
            <span class="staff-badge @GetStatusBadgeClass(Model.Ticket.Status)">@Model.Ticket.StatusLabel</span>
            <span class="staff-badge @GetPriorityBadgeClass(Model.Ticket.Priority)">@Model.Ticket.PriorityLabel</span>
            @if (!string.IsNullOrEmpty(Model.Ticket.Category))
            {
                <span class="staff-badge staff-badge-secondary">@Model.Ticket.Category</span>
            }
        </div>
    </div>
    <div class="d-flex gap-2">
        <!-- Follow/Unfollow Button -->
        @if (Model.IsFollowing)
        {
            <form method="post" asp-page-handler="Unfollow" asp-route-id="@Model.Ticket.Id" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary" title="Stop receiving notifications for this ticket">
                    <i class="bi bi-bell-slash me-2"></i>Following
                </button>
            </form>
        }
        else
        {
            <form method="post" asp-page-handler="Follow" asp-route-id="@Model.Ticket.Id" class="d-inline">
                <button type="submit" class="btn btn-outline-primary" title="Get notified when comments are added">
                    <i class="bi bi-bell me-2"></i>Follow
                </button>
            </form>
        }
        @if (Model.CanEditTicket)
        {
            <a asp-page="@RouteNames.Tickets.Edit" asp-route-id="@Model.Ticket.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
        }
        @if (Model.CanDeleteTicket)
        {
            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Ticket.Id" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this ticket? This action cannot be undone.');">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-2"></i>Delete
                </button>
            </form>
        }
    </div>
</div>

<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Description -->
        <div class="staff-card mb-4">
            <div class="staff-card-header">
                <h5><i class="bi bi-file-text me-2"></i>Description</h5>
            </div>
            <div class="staff-card-body">
                @if (!string.IsNullOrEmpty(Model.Ticket.Description))
                {
                    <p class="mb-0" style="white-space: pre-wrap; line-height: 1.7;">@Model.Ticket.Description</p>
                }
                else
                {
                    <p class="text-muted mb-0 fst-italic">No description provided.</p>
                }
            </div>
        </div>

        <!-- File Attachments -->
        <div class="staff-card mb-4">
            <div class="staff-card-header">
                <h5><i class="bi bi-paperclip me-2"></i>Attachments</h5>
            </div>
            <div class="staff-card-body">
                @{
                    var attachmentOptions = new FileAttachmentOptions
                    {
                        EntityType = "ticket",
                        EntityId = Model.Ticket.Id.ToString(),
                        UniqueId = "ticket-attachments"
                    };
                }
                <partial name="_Partials/FileAttachments" model="attachmentOptions" />
            </div>
        </div>

        <!-- Comments -->
        <div class="staff-card mb-4">
            <div class="staff-card-header">
                <h5><i class="bi bi-chat-left-text me-2"></i>Comments (@Model.Comments.Count())</h5>
            </div>
            <div class="staff-card-body">
                <form method="post" asp-page-handler="AddComment" asp-route-id="@Model.Ticket.Id" class="mb-4">
                    <div class="mb-3">
                        <label asp-for="CommentForm.Body" class="form-label fw-medium">Add a comment</label>
                        <textarea asp-for="CommentForm.Body" class="form-control" rows="3" id="comment-textarea"
                            placeholder="Write your comment... Type @@ to mention a team or person"></textarea>
                        <span asp-validation-for="CommentForm.Body" class="text-danger small"></span>
                        <small class="text-muted">Tip: Type <code>@@</code> to mention a team or person</small>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send me-2"></i>Add Comment
                    </button>
                </form>

                @if (!Model.Comments.Any())
                {
                    <p class="text-muted fst-italic">No comments yet. Be the first to add one.</p>
                }
                @foreach (var comment in Model.Comments)
                {
                    <div class="border-bottom pb-4 mb-4">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="d-flex align-items-center gap-2">
                                <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold"
                                    style="width: 36px; height: 36px; background: var(--staff-primary); font-size: 0.875rem;">
                                    @(comment.AuthorStaffName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                </div>
                                <div>
                                    <span class="fw-semibold">@comment.AuthorStaffName</span>
                                    <span class="text-muted small ms-2">
                                        @comment.CreationTime.ToString("MMM dd, yyyy 'at' HH:mm")
                                    </span>
                                </div>
                            </div>
                        </div>
                        <p class="mb-0 ms-5 comment-body" style="white-space: pre-wrap;">@Html.Raw(HighlightMentions(comment.Body))</p>
                    </div>
                }
            </div>
        </div>

        <!-- Activity Log -->
        <div class="staff-card">
            <div class="staff-card-header">
                <h5><i class="bi bi-clock-history me-2"></i>Activity Log (@Model.ChangeLog.Count())</h5>
            </div>
            <div class="staff-card-body p-0">
                @if (!Model.ChangeLog.Any())
                {
                    <p class="text-muted p-4 mb-0">No activity recorded.</p>
                }
                else
                {
                    <div class="timeline-list">
                        @foreach (var entry in Model.ChangeLog)
                        {
                            <div class="d-flex gap-3 p-3 border-bottom">
                                <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0"
                                    style="width: 32px; height: 32px; background: #f1f5f9;">
                                    <i class="bi bi-activity text-muted small"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <p class="mb-0">
                                            <span class="fw-medium">@(entry.ActorStaffName ?? "System")</span>
                                            <span class="text-muted">@entry.Message</span>
                                        </p>
                                        <small class="text-muted flex-shrink-0 ms-3">
                                            @entry.CreationTime.ToString("MMM dd, HH:mm")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Contact Card -->
        @if (Model.Contact != null)
        {
            <div class="staff-card mb-4">
                <div class="staff-card-header d-flex justify-content-between align-items-center">
                    <h5><i class="bi bi-person-vcard me-2"></i>Contact</h5>
                    <a asp-area="Staff" asp-page="@RouteNames.Contacts.Details"
                        asp-route-id="@Model.Contact.Id" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-box-arrow-up-right me-1"></i>View Details
                    </a>
                </div>
                <div class="staff-card-body">
                    <h6 class="fw-semibold mb-3">@Model.Contact.Name</h6>
                    <dl class="row mb-0">
                        <dt class="col-4 text-muted fw-medium">Contact ID</dt>
                        <dd class="col-8">
                            <a asp-area="Staff" asp-page="@RouteNames.Contacts.Details" asp-route-id="@Model.Contact.Id"
                                style="color: var(--staff-primary); font-weight: 500;">
                                #@Model.Contact.Id
                            </a>
                        </dd>

                        <dt class="col-4 text-muted fw-medium">Email</dt>
                        <dd class="col-8">
                            @if (!string.IsNullOrEmpty(Model.Contact.Email))
                            {
                                <a href="mailto:@Model.Contact.Email" style="color: var(--staff-primary);">
                                    @Model.Contact.Email
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-4 text-muted fw-medium">Phone</dt>
                        <dd class="col-8">
                            @if (Model.Contact.PhoneNumbers.Any())
                            {
                                @foreach (var phone in Model.Contact.PhoneNumbers)
                                {
                                    <div>
                                        <a href="tel:@phone" style="color: var(--staff-primary);">@PhoneNumberFormatter.FormatForDisplay(phone)</a>
                                    </div>
                                }
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-4 text-muted fw-medium">Address</dt>
                        <dd class="col-8" style="white-space: pre-wrap;">@(Model.Contact.Address ?? "—")</dd>

                        <dt class="col-4 text-muted fw-medium">Organization</dt>
                        <dd class="col-8">@(Model.Contact.OrganizationAccount ?? "—")</dd>
                    </dl>

                    @if (Model.Contact.DmeIdentifiers.Any())
                    {
                        <hr class="my-3" />
                        <h6 class="fw-semibold mb-2 small">DME Identifiers</h6>
                        <dl class="row mb-0">
                            @foreach (var kvp in Model.Contact.DmeIdentifiers)
                            {
                                <dt class="col-4 text-muted fw-medium small">@kvp.Key</dt>
                                <dd class="col-8 small">@kvp.Value</dd>
                            }
                        </dl>
                    }
                </div>
            </div>
        }

        <!-- Ticket Details -->
        <div class="staff-card mb-4">
            <div class="staff-card-header">
                <h5><i class="bi bi-info-circle me-2"></i>Details</h5>
            </div>
            <div class="staff-card-body">
                <dl class="row mb-0">
                    <dt class="col-5 text-muted fw-medium">Assignee</dt>
                    <dd class="col-7 fw-medium">@(Model.Ticket.AssigneeName ?? "Unassigned")</dd>

                    <dt class="col-5 text-muted fw-medium">Team</dt>
                    <dd class="col-7">@(Model.Ticket.OwningTeamName ?? "—")</dd>

                    <dt class="col-5 text-muted fw-medium">Created by</dt>
                    <dd class="col-7">@(Model.Ticket.CreatedByStaffName ?? "—")</dd>

                    <dt class="col-5 text-muted fw-medium">Created</dt>
                    <dd class="col-7 small">@Model.Ticket.CreationTime.ToString("MMM dd, yyyy HH:mm")</dd>

                    @if (Model.Ticket.ResolvedAt.HasValue)
                    {
                        <dt class="col-5 text-muted fw-medium">Resolved</dt>
                        <dd class="col-7 small">@Model.Ticket.ResolvedAt.Value.ToString("MMM dd, yyyy HH:mm")</dd>
                    }

                    @if (Model.Ticket.ClosedAt.HasValue)
                    {
                        <dt class="col-5 text-muted fw-medium">Closed</dt>
                        <dd class="col-7 small">@Model.Ticket.ClosedAt.Value.ToString("MMM dd, yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>

        <!-- SLA Info -->
        @if (Model.Ticket.SlaRuleId.HasValue)
        {
            <div class="staff-card mb-4">
                <div class="staff-card-header d-flex justify-content-between align-items-center">
                    <h5><i class="bi bi-hourglass-split me-2"></i>SLA</h5>
                    @if (Model.CanManageTickets && Model.Ticket.Status != TicketStatus.CLOSED && Model.Ticket.Status != TicketStatus.RESOLVED)
                    {
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form method="post" asp-page-handler="RefreshSla" asp-route-id="@Model.Ticket.Id" asp-route-restartFromNow="true" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-arrow-counterclockwise me-2"></i>Restart SLA from now
                                            <small class="d-block text-muted">Recalculates due date from current time</small>
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" asp-page-handler="RefreshSla" asp-route-id="@Model.Ticket.Id" asp-route-restartFromNow="false" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-arrow-repeat me-2"></i>Re-evaluate SLA rules
                                            <small class="d-block text-muted">Keeps original creation time</small>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
                <div class="staff-card-body">
                    <dl class="row mb-0">
                        <dt class="col-5 text-muted fw-medium">Rule</dt>
                        <dd class="col-7">@Model.Ticket.SlaRuleName</dd>

                        <dt class="col-5 text-muted fw-medium">Due</dt>
                        <dd class="col-7 @GetSlaDueClass(Model.Ticket.SlaStatus)">
                            @Model.Ticket.SlaDueAt?.ToString("MMM dd, yyyy h:mm tt")
                        </dd>

                        <dt class="col-5 text-muted fw-medium">Status</dt>
                        <dd class="col-7">
                            <span class="staff-badge @GetSlaBadgeClass(Model.Ticket.SlaStatus)">
                                @Model.Ticket.SlaStatusLabel
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        }

        <!-- Tags -->
        @if (Model.Ticket.Tags.Any())
        {
            <div class="staff-card mb-4">
                <div class="staff-card-header">
                    <h5><i class="bi bi-tags me-2"></i>Tags</h5>
                </div>
                <div class="staff-card-body">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var tag in Model.Ticket.Tags)
                        {
                            <span class="staff-badge staff-badge-secondary">@tag</span>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Followers -->
        <div class="staff-card">
            <div class="staff-card-header">
                <h5><i class="bi bi-bell me-2"></i>Followers (@Model.Followers.Count())</h5>
            </div>
            <div class="staff-card-body">
                @if (!Model.Followers.Any())
                {
                    <p class="text-muted mb-0 small fst-italic">No one is following this ticket yet.</p>
                }
                else
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var follower in Model.Followers)
                        {
                            <div class="d-inline-flex align-items-center gap-1 px-2 py-1 rounded-pill" 
                                 style="background: rgba(0, 157, 220, 0.1); font-size: 0.8125rem;"
                                 title="Following since @follower.FollowedAt.ToString("MMM dd, yyyy")">
                                <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold"
                                     style="width: 22px; height: 22px; background: var(--staff-primary); font-size: 0.625rem;">
                                    @(follower.StaffAdminName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                </div>
                                <span class="fw-medium" style="color: var(--staff-primary);">@follower.StaffAdminName</span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        try
        {
            var statusObj = TicketStatus.From(status);
            return statusObj.DeveloperName switch
            {
                TicketStatus.OPEN => "staff-badge-primary",
                TicketStatus.IN_PROGRESS => "staff-badge-primary",
                TicketStatus.PENDING => "staff-badge-warning",
                TicketStatus.RESOLVED => "staff-badge-success",
                TicketStatus.CLOSED => "staff-badge-secondary",
                _ => "staff-badge-secondary"
            };
        }
        catch
        {
            return "staff-badge-secondary";
        }
    }

    string GetPriorityBadgeClass(string priority)
    {
        try
        {
            var priorityObj = TicketPriority.From(priority);
            return priorityObj.DeveloperName switch
            {
                TicketPriority.URGENT => "staff-badge-danger",
                TicketPriority.HIGH => "staff-badge-warning",
                TicketPriority.NORMAL => "staff-badge-primary",
                TicketPriority.LOW => "staff-badge-secondary",
                _ => "staff-badge-secondary"
            };
        }
        catch
        {
            return "staff-badge-secondary";
        }
    }

    string GetSlaBadgeClass(string? slaStatus)
    {
        if (string.IsNullOrEmpty(slaStatus))
            return "staff-badge-secondary";

        try
        {
            var slaStatusObj = SlaStatus.From(slaStatus);
            return slaStatusObj.DeveloperName switch
            {
                SlaStatus.BREACHED => "staff-badge-danger",
                SlaStatus.APPROACHING_BREACH => "staff-badge-warning",
                SlaStatus.ON_TRACK => "staff-badge-success",
                SlaStatus.COMPLETED => "staff-badge-secondary",
                _ => "staff-badge-secondary"
            };
        }
        catch
        {
            return "staff-badge-secondary";
        }
    }

    string GetSlaDueClass(string? slaStatus) => slaStatus switch
    {
        SlaStatus.BREACHED => "text-danger fw-bold",
        SlaStatus.APPROACHING_BREACH => "text-warning fw-bold",
        _ => ""
    };

    /// <summary>
    /// Highlights @mentions in comment body text.
    /// </summary>
    string HighlightMentions(string body)
    {
        if (string.IsNullOrEmpty(body))
            return body;

        // Pattern to match @mentions - capture @Name or @First Last patterns
        var pattern = @"@([A-Za-z][A-Za-z0-9]*(?:\s+[A-Za-z][A-Za-z0-9]*)?)";
        return System.Text.RegularExpressions.Regex.Replace(
            System.Web.HttpUtility.HtmlEncode(body),
            pattern,
            match => $"<span class=\"mention-highlight\">@{match.Groups[1].Value}</span>"
        );
    }
}

@section headstyles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tributejs@5.1.3/dist/tribute.css">
    <style>
        /* Mention highlighting in comments */
        .mention-highlight {
            background: rgba(0, 157, 220, 0.15);
            color: var(--staff-primary);
            padding: 0.125rem 0.375rem;
            border-radius: 4px;
            font-weight: 500;
        }
        
        /* Tribute.js autocomplete styling */
        .tribute-container {
            position: absolute;
            top: 0;
            left: 0;
            height: auto;
            max-height: 300px;
            overflow-y: auto;
            display: block;
            z-index: 999999;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            border: 1px solid #e2e8f0;
            background: white;
        }
        
        .tribute-container ul {
            margin: 0;
            padding: 0.25rem;
            list-style: none;
            background: white;
        }
        
        .tribute-container li {
            padding: 0.5rem 0.75rem;
            cursor: pointer;
            border-radius: 6px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .tribute-container li:hover,
        .tribute-container li.highlight {
            background: rgba(0, 157, 220, 0.1);
        }
        
        .tribute-container li .mention-icon {
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-size: 0.75rem;
        }
        
        .tribute-container li .mention-icon.team {
            background: #e0f2fe;
            color: #0284c7;
        }
        
        .tribute-container li .mention-icon.user {
            background: #f0fdf4;
