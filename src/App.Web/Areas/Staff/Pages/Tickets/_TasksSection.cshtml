@using App.Application.TicketTasks
@using App.Application.TicketConfig.Queries
@using App.Application.Tickets.Queries
@model App.Web.Areas.Staff.Pages.Tickets.TasksSectionModel

@{
    var isLocked = Model.IsTicketClosed;
}

<div class="staff-card" id="tasks-section" data-locked="@isLocked.ToString().ToLower()">
    <div class="staff-card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
            <i class="bi bi-check2-square me-2"></i>Tasks
            @if (isLocked)
            {
                <span class="badge bg-secondary ms-2" style="font-size:0.65rem;"><i class="bi bi-lock-fill me-1"></i>Ticket Closed</span>
            }
        </h6>
        <div class="d-flex align-items-center gap-2">
            @if (!isLocked && Model.Templates.Any())
            {
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-clipboard-plus me-1"></i>Template
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @foreach (var template in Model.Templates)
                        {
                            <li>
                                <button class="dropdown-item apply-template-btn" data-template-id="@template.Id"
                                        data-template-name="@template.Name">
                                    <i class="bi bi-clipboard-check me-2 text-muted"></i>@template.Name
                                    <small class="text-muted ms-1">(@template.ItemCount)</small>
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            }
            @{
                var totalTasks = Model.Tasks.Count();
                var completedTasks = Model.Tasks.Count(t => t.Status == "closed");
            }
            @if (totalTasks > 0)
            {
                var pct = (int)Math.Round(100.0 * completedTasks / totalTasks);
                var color = completedTasks == totalTasks ? "#198754" : completedTasks > 0 ? "#0d6efd" : "#6c757d";
                <div class="d-flex align-items-center gap-2" id="task-progress-summary">
                    <div style="width:60px;height:6px;background:#e9ecef;border-radius:3px;overflow:hidden;">
                        <div style="height:100%;width:@(pct)%;background:@color;border-radius:3px;transition:width .3s ease;"></div>
                    </div>
                    <span class="text-muted small fw-medium" id="task-count">@completedTasks / @totalTasks</span>
                </div>
            }
            else
            {
                <span class="badge bg-secondary" id="task-count">0</span>
            }
        </div>
    </div>
    <div class="staff-card-body p-0">
        @if (!Model.Tasks.Any())
        {
            <div class="text-muted text-center py-4" id="tasks-empty-state">
                <i class="bi bi-check2-square" style="font-size: 2rem; opacity: 0.3;"></i>
                <p class="mt-2 mb-0 small">No tasks on this ticket.</p>
            </div>
        }

        <!-- Hidden assignee options for JS picker -->
        @if (!isLocked)
        {
            <div id="task-assignee-options" style="display:none;">
                @foreach (var assignee in Model.AvailableAssignees)
                {
                    <span data-value="@assignee.Value" data-text="@assignee.DisplayText"></span>
                }
            </div>
        }

        <div id="tasks-list">
            @foreach (var task in Model.Tasks.OrderBy(t => t.SortOrder))
            {
                var isClosed = task.Status == "closed";
                var isBlocked = task.IsBlocked;

                <div class="task-item @(isBlocked ? "task-blocked" : "") @(isClosed ? "task-closed" : "")"
                     data-task-id="@task.Id" data-status="@task.Status">
                    <div class="task-row-main">
                        @if (!isLocked)
                        {
                            <span class="drag-handle" title="Drag to reorder"><i class="bi bi-grip-vertical"></i></span>
                        }

                        @if (isBlocked)
                        {
                            <span class="task-status-icon task-status-blocked" title="Blocked by: @task.DependsOnTaskTitle">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                        }
                        else if (isClosed)
                        {
                            @if (!isLocked)
                            {
                                <button class="task-complete-btn task-complete-btn--done" title="Reopen task" data-action="reopen">
                                    <i class="bi bi-check-circle-fill"></i>
                                </button>
                            }
                            else
                            {
                                <span class="task-status-icon" style="color:#22c55e;"><i class="bi bi-check-circle-fill"></i></span>
                            }
                        }
                        else
                        {
                            @if (!isLocked)
                            {
                                <button class="task-complete-btn" title="Mark as complete" data-action="complete">
                                    <i class="bi bi-circle"></i>
                                </button>
                            }
                            else
                            {
                                <span class="task-status-icon" style="color:#cbd5e1;"><i class="bi bi-circle"></i></span>
                            }
                        }

                        <span class="task-title @(isClosed ? "task-title--done" : "") @(isBlocked ? "task-title--blocked" : "")"
                              @if (!isLocked && !isClosed) { <text>data-field="title" contenteditable="true"</text> }>@task.Title</span>

                        <div class="task-meta-badges">
                            @if (isBlocked)
                            {
                                <span class="task-badge task-badge--blocked" title="Blocked by: @task.DependsOnTaskTitle">
                                    <i class="bi bi-lock"></i> @task.DependsOnTaskTitle
                                </span>
                            }
                        </div>

                        <div class="task-actions @(!isLocked && !isClosed ? "task-actions--visible" : "")">
                            @if (!isLocked && !isClosed)
                            {
                                <button class="task-action-btn task-assign-btn" title="Set assignee" data-action="assign">
                                    @if (task.AssigneeName != null)
                                    {
                                        <i class="bi bi-person-fill"></i>
                                        <span class="task-action-label">@task.AssigneeName</span>
                                    }
                                    else if (task.OwningTeamName != null)
                                    {
                                        <i class="bi bi-people-fill"></i>
                                        <span class="task-action-label">@task.OwningTeamName</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-plus"></i>
                                    }
                                </button>
                                <button class="task-action-btn task-due-btn" title="Set due date" data-action="due">
                                    @if (task.DueAt.HasValue)
                                    {
                                        <i class="bi bi-calendar-event"></i>
                                        <span class="task-action-label @(task.IsOverdue ? "text-danger fw-semibold" : "")">@task.DueAt.Value.ToString("MMM d")</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-calendar-plus"></i>
                                    }
                                </button>
                                <button class="task-action-btn task-dep-btn" title="Set dependency" data-action="dependency">
                                    <i class="bi bi-diagram-2"></i>
                                </button>
                            }
                            else
                            {
                                @* Read-only badges for closed/locked tasks *@
                                @if (task.AssigneeName != null)
                                {
                                    <span class="task-badge task-badge--muted"><i class="bi bi-person-fill"></i> @task.AssigneeName</span>
                                }
                                else if (task.OwningTeamName != null)
                                {
                                    <span class="task-badge task-badge--muted"><i class="bi bi-people-fill"></i> @task.OwningTeamName</span>
                                }
                                @if (task.DueAt.HasValue)
                                {
                                    <span class="task-badge task-badge--muted"><i class="bi bi-calendar-event"></i> @task.DueAt.Value.ToString("MMM d")</span>
                                }
                                @if (isClosed && task.ClosedByStaffName != null)
                                {
                                    <span class="task-badge task-badge--muted"><i class="bi bi-check2"></i> @task.ClosedByStaffName</span>
                                }
                            }
                            @if (!isLocked)
                            {
                                <button class="task-action-btn task-action-btn--danger task-delete-btn" title="Delete task" data-action="delete">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!isLocked)
        {
            <!-- Inline add task -->
            <div class="task-add-row">
                <div class="task-add-inner">
                    <i class="bi bi-plus-circle text-muted"></i>
                    <input type="text" class="task-add-input" id="new-task-input"
                           placeholder="Add a task..." maxlength="500" />
                </div>
            </div>
        }
    </div>
</div>

<style>
    .task-item { border-bottom: 1px solid #f1f5f9; transition: background-color 0.15s ease; }
    .task-item:last-child { border-bottom: none; }
    .task-item:hover { background-color: #f8fafc; }
    .task-item.task-blocked { background-color: #fffbeb; }
    .task-item.task-blocked:hover { background-color: #fef3c7; }
    .task-item.task-closed { background-color: #f0fdf4; }
    .task-item.task-closed:hover { background-color: #dcfce7; }
    .task-row-main { display: flex; align-items: center; gap: 0.5rem; padding: 0.625rem 1rem; min-height: 44px; }
    .drag-handle { cursor: grab; color: #cbd5e1; font-size: 1rem; padding: 0 2px; opacity: 0; transition: opacity 0.15s ease; }
    .task-item:hover .drag-handle { opacity: 1; }
    .task-complete-btn { background: none; border: none; padding: 0; cursor: pointer; font-size: 1.2rem; color: #cbd5e1; line-height: 1; transition: all 0.15s ease; flex-shrink: 0; }
    .task-complete-btn:hover { color: #22c55e; transform: scale(1.15); }
    .task-complete-btn--done { color: #22c55e; }
    .task-complete-btn--done:hover { color: #dc2626; }
    .task-status-icon { flex-shrink: 0; font-size: 1.05rem; }
    .task-status-blocked { color: #f59e0b; }
    .task-title { flex: 1; font-size: 0.875rem; line-height: 1.4; color: #1e293b; outline: none; border-radius: 4px; padding: 2px 4px; margin: -2px -4px; min-width: 0; word-break: break-word; }
    .task-title:focus { background: #eff6ff; box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3); }
    .task-title--done { text-decoration: line-through; color: #94a3b8; }
    .task-title--blocked { color: #92400e; }
    .task-meta-badges { display: flex; gap: 0.375rem; flex-shrink: 0; }
    .task-badge { display: inline-flex; align-items: center; gap: 0.25rem; font-size: 0.7rem; padding: 0.15rem 0.5rem; border-radius: 100px; white-space: nowrap; font-weight: 500; }
    .task-badge--blocked { background: #fef3c7; color: #92400e; }
    .task-badge--muted { background: #f1f5f9; color: #64748b; }
    .task-actions { display: flex; align-items: center; gap: 0.25rem; flex-shrink: 0; opacity: 0; transition: opacity 0.15s ease; }
    .task-item:hover .task-actions { opacity: 1; }
    .task-actions--visible { opacity: 1; }
    .task-actions:has(.task-action-btn .task-action-label) { opacity: 1; }
    .task-action-btn { background: none; border: 1px solid transparent; padding: 0.2rem 0.45rem; border-radius: 6px; cursor: pointer; font-size: 0.75rem; color: #94a3b8; display: inline-flex; align-items: center; gap: 0.25rem; transition: all 0.12s ease; white-space: nowrap; }
    .task-action-btn:hover { background: #f1f5f9; border-color: #e2e8f0; color: #475569; }
    .task-action-btn .task-action-label { font-size: 0.7rem; color: #475569; font-weight: 500; }
    .task-action-btn--danger:hover { color: #dc2626; background: #fef2f2; border-color: #fecaca; }
    .task-add-row { border-top: 1px solid #f1f5f9; padding: 0.625rem 1rem; }
    .task-add-inner { display: flex; align-items: center; gap: 0.5rem; }
    .task-add-input { flex: 1; border: none; outline: none; font-size: 0.875rem; color: #1e293b; background: transparent; padding: 4px 0; }
    .task-add-input::placeholder { color: #94a3b8; }
    .task-picker { position: absolute; z-index: 1060; background: white; border: 1px solid #e2e8f0; border-radius: 10px; box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1), 0 8px 10px -6px rgba(0,0,0,0.1); padding: 0.5rem; min-width: 260px; animation: taskPickerIn 0.12s ease-out; }
    @@keyframes taskPickerIn { from { opacity: 0; transform: translateY(-4px); } to { opacity: 1; transform: translateY(0); } }
    .task-picker-header { font-size: 0.7rem; font-weight: 600; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.05em; padding: 0.25rem 0.5rem; margin-bottom: 0.25rem; }
    .task-picker-search { width: 100%; border: 1px solid #e2e8f0; border-radius: 6px; padding: 0.375rem 0.625rem; font-size: 0.8rem; outline: none; margin-bottom: 0.375rem; }
    .task-picker-search:focus { border-color: #93c5fd; box-shadow: 0 0 0 2px rgba(59,130,246,0.15); }
    .task-picker-option { display: flex; align-items: center; gap: 0.5rem; padding: 0.375rem 0.5rem; border-radius: 6px; cursor: pointer; font-size: 0.8rem; color: #334155; text-decoration: none; transition: background 0.1s ease; }
    .task-picker-option:hover { background: #f1f5f9; color: #334155; }
    .task-picker-option i { color: #94a3b8; }
    .task-picker-option--danger { color: #dc2626; }
    .task-picker-option--danger:hover { background: #fef2f2; }
    .task-picker-divider { height: 1px; background: #f1f5f9; margin: 0.25rem 0; }
    .task-picker-list { max-height: 250px; overflow-y: auto; }
</style>
