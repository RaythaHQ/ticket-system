@page "/staff/tickets"
@model App.Web.Areas.Staff.Pages.Tickets.Index
@using App.Web.Areas.Staff.Pages.Shared.Models
@using App.Domain.ValueObjects
@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url

@{
    ViewData["Title"] = "Tickets";
    ViewData["ActiveMenu"] = "Tickets";

    var backToListUrl = Url.Page(RouteNames.Tickets.Index, new
    {
        search = Model.ListView.Search,
        sortBy = ViewContext.HttpContext.Request.Query["sortBy"].ToString(),
        status = ViewContext.HttpContext.Request.Query["status"].ToString(),
        priority = ViewContext.HttpContext.Request.Query["priority"].ToString(),
        assigneeId = ViewContext.HttpContext.Request.Query["assigneeId"].ToString(),
        viewId = Model.CurrentViewId,
        builtInView = Model.BuiltInView,
        pageNumber = Model.ListView.PageNumber,
        pageSize = Model.ListView.PageSize
    });
}

<div class="staff-page-heading mb-4">
    <h1 class="h3 mb-0">Tickets</h1>
    <a asp-page="@RouteNames.Tickets.Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>New Ticket
    </a>
</div>

<!-- Sort By -->
<div class="staff-card mb-4">
    <div class="staff-card-body py-3">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <span class="text-muted fw-semibold small">Sort By:</span>
            <div class="staff-quick-views">
                @{
                    var currentSortBy = ViewContext.HttpContext.Request.Query["sortBy"].ToString();
                    if (string.IsNullOrEmpty(currentSortBy))
                    {
                        currentSortBy = "newest";
                    }
                }
                <a asp-page="@RouteNames.Tickets.Index" 
                   asp-route-sortBy="newest"
                   asp-route-viewId="@Model.CurrentViewId"
                   asp-route-builtInView="@Model.BuiltInView"
                   asp-route-search="@ViewContext.HttpContext.Request.Query["search"]"
                   asp-route-status="@ViewContext.HttpContext.Request.Query["status"]"
                   asp-route-priority="@ViewContext.HttpContext.Request.Query["priority"]"
                   asp-route-assigneeId="@ViewContext.HttpContext.Request.Query["assigneeId"]"
                   class="staff-quick-view-btn @(currentSortBy == "newest" ? "active" : "")">
                    Newest
                </a>
                <a asp-page="@RouteNames.Tickets.Index" 
                   asp-route-sortBy="oldest"
                   asp-route-viewId="@Model.CurrentViewId"
                   asp-route-builtInView="@Model.BuiltInView"
                   asp-route-search="@ViewContext.HttpContext.Request.Query["search"]"
                   asp-route-status="@ViewContext.HttpContext.Request.Query["status"]"
                   asp-route-priority="@ViewContext.HttpContext.Request.Query["priority"]"
                   asp-route-assigneeId="@ViewContext.HttpContext.Request.Query["assigneeId"]"
                   class="staff-quick-view-btn @(currentSortBy == "oldest" ? "active" : "")">
                    Oldest
                </a>
                <a asp-page="@RouteNames.Tickets.Index" 
                   asp-route-sortBy="priority"
                   asp-route-viewId="@Model.CurrentViewId"
                   asp-route-builtInView="@Model.BuiltInView"
                   asp-route-search="@ViewContext.HttpContext.Request.Query["search"]"
                   asp-route-status="@ViewContext.HttpContext.Request.Query["status"]"
                   asp-route-priority="@ViewContext.HttpContext.Request.Query["priority"]"
                   asp-route-assigneeId="@ViewContext.HttpContext.Request.Query["assigneeId"]"
                   class="staff-quick-view-btn @(currentSortBy == "priority" ? "active" : "")">
                    Priority
                </a>
                <a asp-page="@RouteNames.Tickets.Index" 
                   asp-route-sortBy="status"
                   asp-route-viewId="@Model.CurrentViewId"
                   asp-route-builtInView="@Model.BuiltInView"
                   asp-route-search="@ViewContext.HttpContext.Request.Query["search"]"
                   asp-route-status="@ViewContext.HttpContext.Request.Query["status"]"
                   asp-route-priority="@ViewContext.HttpContext.Request.Query["priority"]"
                   asp-route-assigneeId="@ViewContext.HttpContext.Request.Query["assigneeId"]"
                   class="staff-quick-view-btn @(currentSortBy == "status" ? "active" : "")">
                    Status
                </a>
                <a asp-page="@RouteNames.Tickets.Index" 
                   asp-route-sortBy="assignee"
                   asp-route-viewId="@Model.CurrentViewId"
                   asp-route-builtInView="@Model.BuiltInView"
                   asp-route-search="@ViewContext.HttpContext.Request.Query["search"]"
                   asp-route-status="@ViewContext.HttpContext.Request.Query["status"]"
                   asp-route-priority="@ViewContext.HttpContext.Request.Query["priority"]"
                   asp-route-assigneeId="@ViewContext.HttpContext.Request.Query["assigneeId"]"
                   class="staff-quick-view-btn @(currentSortBy == "assignee" ? "active" : "")">
                    Assignee
                </a>
                <a asp-page="@RouteNames.Tickets.Index" 
                   asp-route-sortBy="sla"
                   asp-route-viewId="@Model.CurrentViewId"
                   asp-route-builtInView="@Model.BuiltInView"
                   asp-route-search="@ViewContext.HttpContext.Request.Query["search"]"
                   asp-route-status="@ViewContext.HttpContext.Request.Query["status"]"
                   asp-route-priority="@ViewContext.HttpContext.Request.Query["priority"]"
                   asp-route-assigneeId="@ViewContext.HttpContext.Request.Query["assigneeId"]"
                   class="staff-quick-view-btn @(currentSortBy == "sla" ? "active" : "")">
                    SLA
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="staff-card mb-4">
    <div class="staff-card-body">
        <form method="get" class="row g-3">
            @if (!string.IsNullOrEmpty(Model.CurrentViewId))
            {
                <input type="hidden" name="viewId" value="@Model.CurrentViewId" />
            }
            @if (!string.IsNullOrEmpty(Model.BuiltInView))
            {
                <input type="hidden" name="builtInView" value="@Model.BuiltInView" />
            }
            @{
                var currentSortBy = ViewContext.HttpContext.Request.Query["sortBy"].ToString();
                if (string.IsNullOrEmpty(currentSortBy))
                {
                    currentSortBy = "newest";
                }
            }
            <input type="hidden" name="sortBy" value="@currentSortBy" />
            <div class="col-lg-4 col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="search" class="form-control border-start-0 ps-0"
                        placeholder="@(Model.SelectedView != null ? "Search visible columns..." : "Search tickets...")"
                        value="@ViewContext.HttpContext.Request.Query["search"]" />
                </div>
                @if (Model.SelectedView != null && Model.SelectedView.VisibleColumns.Any())
                {
                    <small class="text-muted mt-1 d-block">
                        Searching: @string.Join(", ", Model.SelectedView.VisibleColumns.Take(3))
                        @if (Model.SelectedView.VisibleColumns.Count > 3)
                        {
                            <span>+@(Model.SelectedView.VisibleColumns.Count - 3) more</span>
                        }
                    </small>
                }
            </div>
            <div class="col-lg-2 col-md-3">
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    @foreach (var status in TicketStatus.SupportedTypes)
                    {
                        <option value="@status.DeveloperName"
                            selected="@(ViewContext.HttpContext.Request.Query["status"] == status.DeveloperName)">
                            @status.Label
                        </option>
                    }
                </select>
            </div>
            <div class="col-lg-2 col-md-3">
                <select name="priority" class="form-select">
                    <option value="">All Priorities</option>
                    @foreach (var priority in TicketPriority.SupportedTypes.OrderByDescending(p => p.SortOrder))
                    {
                        <option value="@priority.DeveloperName"
                            selected="@(ViewContext.HttpContext.Request.Query["priority"] == priority.DeveloperName)">
                            @priority.Label
                        </option>
                    }
                </select>
            </div>
            <div class="col-lg-2 col-md-3">
                <select name="assigneeId" class="form-select">
                    <option value="">All Assignees</option>
                    @foreach (var assignee in Model.AvailableAssignees)
                    {
                        <option value="@assignee.Value"
                            selected="@(ViewContext.HttpContext.Request.Query["assigneeId"] == assignee.Value)">
                            @assignee.DisplayText
                        </option>
                    }
                </select>
            </div>
            <div class="col-lg-2 col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Tickets Table -->
<div class="staff-card">
    <div class="table-responsive">
        <table class="table staff-table mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Assignee</th>
                    <th>Contact</th>
                    <th>SLA</th>
                    <th>Created</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.ListView.Items.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.5;"></i>
                            <p class="mt-3 mb-0 fw-medium">No tickets found</p>
                            <p class="small">Try adjusting your filters or create a new ticket</p>
                        </td>
                    </tr>
                }
                @foreach (var ticket in Model.ListView.Items)
                {
                    <tr>
                        <td>
                            <a asp-page="@RouteNames.Tickets.Details" asp-route-id="@ticket.Id" asp-route-backToListUrl="@backToListUrl"
                                class="fw-semibold text-decoration-none" style="color: var(--staff-primary);">
                                #@ticket.Id
                            </a>
                        </td>
                        <td>
                            <a asp-page="@RouteNames.Tickets.Details" asp-route-id="@ticket.Id" asp-route-backToListUrl="@backToListUrl"
                                class="text-dark text-decoration-none">
                                @(ticket.Title.Length > 50 ? ticket.Title.Substring(0, 47) + "..." : ticket.Title)
                            </a>
                        </td>
                        <td>
                            <span class="staff-badge @GetStatusBadgeClass(ticket.Status)">
                                @ticket.StatusLabel
                            </span>
                        </td>
                        <td>
                            <span class="staff-badge @GetPriorityBadgeClass(ticket.Priority)">
                                @ticket.PriorityLabel
                            </span>
                        </td>
                        <td class="text-muted">
                            @if (!string.IsNullOrEmpty(ticket.OwningTeamName))
                            {
                                @ticket.OwningTeamName
                                @if (!string.IsNullOrEmpty(ticket.AssigneeName))
                                {
                                    <span> / @ticket.AssigneeName</span>
                                }
                                else
                                {
                                    <span> / Anyone</span>
                                }
                            }
                            else if (!string.IsNullOrEmpty(ticket.AssigneeName))
                            {
                                @ticket.AssigneeName
                            }
                            else
                            {
                                <span>—</span>
                            }
                        </td>
                        <td class="text-muted">@(ticket.ContactName ?? "—")</td>
                        <td>
                            @if (ticket.SlaDueAt != "-")
                            {
                                <span class="@GetSlaBadgeClass(ticket.SlaStatusLabel) small">
                                    @ticket.SlaDueAt
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-muted small">@ticket.CreationTime</td>
                        <td class="text-end">
                            <a asp-page="@RouteNames.Tickets.Details" asp-route-id="@ticket.Id" asp-route-backToListUrl="@backToListUrl"
                                class="btn btn-sm btn-outline-primary">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.ListView.TotalCount > 0)
    {
        <partial name="_Partials/TablePagination" model="@Model.ListView" />
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        try
        {
            var statusObj = TicketStatus.From(status);
            return statusObj.DeveloperName switch
            {
                TicketStatus.OPEN => "staff-badge-primary",
                TicketStatus.IN_PROGRESS => "staff-badge-primary",
                TicketStatus.PENDING => "staff-badge-warning",
                TicketStatus.RESOLVED => "staff-badge-success",
                TicketStatus.CLOSED => "staff-badge-secondary",
                _ => "staff-badge-secondary"
            };
        }
        catch
        {
            return "staff-badge-secondary";
        }
    }

    string GetPriorityBadgeClass(string priority)
    {
        try
        {
            var priorityObj = TicketPriority.From(priority);
            return priorityObj.DeveloperName switch
            {
                TicketPriority.URGENT => "staff-badge-danger",
                TicketPriority.HIGH => "staff-badge-warning",
                TicketPriority.NORMAL => "staff-badge-primary",
                TicketPriority.LOW => "staff-badge-secondary",
                _ => "staff-badge-secondary"
            };
        }
        catch
        {
            return "staff-badge-secondary";
        }
    }

    string GetSlaBadgeClass(string slaStatus) => slaStatus switch
    {
        "Breached" => "text-danger fw-bold",
        "Approaching Breach" => "text-warning fw-bold",
        _ => ""
    };
}
