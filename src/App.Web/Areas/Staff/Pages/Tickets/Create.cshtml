@page "/staff/tickets/create"
@model App.Web.Areas.Staff.Pages.Tickets.Create
@using App.Web.Areas.Staff.Pages.Shared.Models
@using App.Domain.ValueObjects

@{
    ViewData["Title"] = "Create Ticket";
    ViewData["ActiveMenu"] = "Tickets";

    var back = new BackLinkOptions
    {
        Page = RouteNames.Tickets.Index,
        Text = "Back to Tickets"
    };
}

<partial name="_Partials/PageHeading" model='"Create Ticket"' />

<div class="row">
    <div class="col-xl-8 col-lg-10">
        <div class="staff-card">
            <div class="staff-card-body">
                @(await Html.PartialAsync("_Partials/BackToList", back))

                <form method="post" class="mt-4">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="mb-4">
                                <label asp-for="Form.Title" class="form-label">
                                    Title <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Form.Title" class="form-control" placeholder="Enter ticket title" />
                                <span asp-validation-for="Form.Title" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Form.Description" class="form-label">Description</label>
                                <textarea asp-for="Form.Description" class="form-control" rows="5"
                                    placeholder="Describe the issue or request in detail..."></textarea>
                                <span asp-validation-for="Form.Description" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Form.Tags" class="form-label">Tags</label>
                                <input asp-for="Form.Tags" class="form-control"
                                    placeholder="Comma-separated tags (e.g., billing, urgent, follow-up)" />
                                <span asp-validation-for="Form.Tags" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="p-4 rounded-3" style="background: #f8fafc;">
                                <h6 class="fw-semibold mb-3 text-muted small text-uppercase">Assignment</h6>

                                <div class="mb-3">
                                    <label asp-for="Form.Priority" class="form-label">
                                        Priority <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Form.Priority" class="form-select">
                                        @foreach (var priority in TicketPriority.SupportedTypes.OrderBy(p =>
                                                                                p.SortOrder))
                                        {
                                            <option value="@priority.DeveloperName"
                                                selected="@(priority.DeveloperName == TicketPriority.NORMAL)">
                                                @priority.Label
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="Form.Priority" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Form.Category" class="form-label">Category</label>
                                    <input asp-for="Form.Category" class="form-control"
                                        placeholder="e.g., Billing, Support" />
                                    <span asp-validation-for="Form.Category" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Assignee</label>
                                    <select id="assignee-dropdown" class="form-select">
                                        @foreach (var assignee in Model.AvailableAssignees)
                                        {
                                            bool isSelected = false;
                                            if (assignee.TeamId == null && assignee.AssigneeId == null)
                                            {
                                                isSelected = Model.Form.OwningTeamId == null && Model.Form.AssigneeId == null;
                                            }
                                            else if (assignee.TeamId.HasValue && assignee.AssigneeId == null)
                                            {
                                                isSelected = Model.Form.OwningTeamId == assignee.TeamId && Model.Form.AssigneeId == null;
                                            }
                                            else if (assignee.TeamId.HasValue && assignee.AssigneeId.HasValue)
                                            {
                                                isSelected = Model.Form.OwningTeamId == assignee.TeamId && Model.Form.AssigneeId == assignee.AssigneeId;
                                            }
                                            <option value="@assignee.Value" selected="@isSelected">@assignee.DisplayText</option>
                                        }
                                    </select>
                                    <input type="hidden" asp-for="Form.OwningTeamId" id="owning-team-id" />
                                    <input type="hidden" asp-for="Form.AssigneeId" id="assignee-id" />
                                    <span asp-validation-for="Form.OwningTeamId" class="text-danger small"></span>
                                    <span asp-validation-for="Form.AssigneeId" class="text-danger small"></span>
                                </div>

                                <div class="mb-0">
                                    <label asp-for="Form.ContactId" class="form-label">Link to Contact</label>
                                    <input asp-for="Form.ContactId" type="number" class="form-control"
                                        placeholder="Contact ID" />
                                    <span asp-validation-for="Form.ContactId" class="text-danger small"></span>
                                    <small class="text-muted d-block mt-1">Enter a contact ID to link this
                                        ticket</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-2"></i>Create Ticket
                        </button>
                        <a asp-page="@RouteNames.Tickets.Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const assigneeDropdown = document.getElementById('assignee-dropdown');
            const owningTeamIdInput = document.getElementById('owning-team-id');
            const assigneeIdInput = document.getElementById('assignee-id');

            // Initialize hidden fields based on current selection
            updateHiddenFields();

            // Update hidden fields when dropdown changes
            assigneeDropdown.addEventListener('change', updateHiddenFields);

            function updateHiddenFields() {
                const value = assigneeDropdown.value;
                
                if (value === 'unassigned') {
                    owningTeamIdInput.value = '';
                    assigneeIdInput.value = '';
                } else if (value.startsWith('team:')) {
                    const parts = value.split(':');
                    if (parts.length === 2) {
                        // Team only: "team:{teamId}" - parts[1] is the ShortGuid string
                        owningTeamIdInput.value = parts[1];
                        assigneeIdInput.value = '';
                    } else if (parts.length === 4 && parts[2] === 'assignee') {
                        // Team and assignee: "team:{teamId}:assignee:{assigneeId}" - parts[1] and parts[3] are ShortGuid strings
                        owningTeamIdInput.value = parts[1];
                        assigneeIdInput.value = parts[3];
                    }
                }
            }
        });
    </script>
}
