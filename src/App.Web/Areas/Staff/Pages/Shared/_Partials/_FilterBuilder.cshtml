@using System.Text.Json
@model App.Web.Areas.Staff.Pages.Shared.Models.FilterBuilderViewModel

@{
    Layout = null;
    var jsonOptions = new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase };
    var attributesJson = JsonSerializer.Serialize(Model.Attributes, jsonOptions);
    var usersJson = JsonSerializer.Serialize(Model.Users, jsonOptions);
    var teamsJson = JsonSerializer.Serialize(Model.Teams, jsonOptions);
    var statusesJson = JsonSerializer.Serialize(Model.Statuses, jsonOptions);
    var prioritiesJson = JsonSerializer.Serialize(Model.Priorities, jsonOptions);
    var datePresetsJson = JsonSerializer.Serialize(Model.DatePresets, jsonOptions);
    
    var andFilters = Model.Conditions?.AndFilters ?? new List<App.Application.TicketViews.ViewFilterCondition>();
    var orFilters = Model.Conditions?.OrFilters ?? new List<App.Application.TicketViews.ViewFilterCondition>();
    
    if (!andFilters.Any() && Model.Conditions?.Filters?.Any() == true && Model.Conditions.Logic != "OR")
    {
        andFilters = Model.Conditions.Filters;
    }
}

<div class="staff-card mb-4" id="filterBuilderCard"
     data-attributes="@attributesJson"
     data-users="@usersJson"
     data-teams="@teamsJson"
     data-statuses="@statusesJson"
     data-priorities="@prioritiesJson"
     data-date-presets="@datePresetsJson">
    
    <div class="staff-card-header">
        <h6 class="mb-0">
            <i class="bi bi-funnel me-2 text-primary"></i>
            Filter Conditions
        </h6>
    </div>
    <div class="staff-card-body">
        <!-- Match ALL Section -->
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <span class="badge bg-primary me-2">AND</span>
                    <span class="fw-semibold">Match All</span>
                    <span class="text-muted ms-2 small">(ticket must meet all these criteria)</span>
                </div>
                <button type="button" class="btn btn-sm btn-outline-primary" id="addAndConditionBtn">
                    <i class="bi bi-plus-lg me-1"></i> Add Condition
                </button>
            </div>
            <div id="andConditions">
                @if (!andFilters.Any())
                {
                    <div class="text-muted small p-3 bg-light rounded empty-message">
                        <i class="bi bi-info-circle me-1"></i>
                        No conditions added. Click "Add Condition" to filter tickets.
                    </div>
                }
                else
                {
                    var index = 0;
                    foreach (var filter in andFilters)
                    {
                        <div class="filter-condition d-flex gap-2 align-items-start mb-2" data-index="@index" data-logic="AND" data-initial-value="@filter.Value">
                            <select name="Conditions.AndFilters[@index].Field" class="form-select form-select-sm attribute-select" style="width: 200px;">
                                <option value="">Select field...</option>
                                @foreach (var attr in Model.Attributes)
                                {
                                    <option value="@attr.Field" data-type="@attr.Type" selected="@(filter.Field == attr.Field)">@attr.Label</option>
                                }
                            </select>
                            <select name="Conditions.AndFilters[@index].Operator" class="form-select form-select-sm operator-select" style="width: 200px;">
                                @{
                                    var attrDef = Model.Attributes.FirstOrDefault(a => a.Field == filter.Field);
                                    if (attrDef?.Operators != null)
                                    {
                                        foreach (var op in attrDef.Operators)
                                        {
                                            <option value="@op.Value" data-requires-value="@op.RequiresValue.ToString().ToLower()" selected="@(filter.Operator == op.Value)">@op.Label</option>
                                        }
                                    }
                                }
                            </select>
                            <div class="value-input-container flex-grow-1" style="min-width: 200px;">
                                <!-- Placeholder - will be initialized by JS based on field type -->
                                <input type="hidden" name="Conditions.AndFilters[@index].Value" value="@filter.Value">
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger remove-condition-btn" title="Remove">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        index++;
                    }
                }
            </div>
        </div>
        
        <hr class="my-4">
        
        <!-- Match ANY Section -->
        <div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <span class="badge bg-warning text-dark me-2">OR</span>
                    <span class="fw-semibold">Match Any</span>
                    <span class="text-muted ms-2 small">(from above results, must also match at least one)</span>
                </div>
                <button type="button" class="btn btn-sm btn-outline-warning" id="addOrConditionBtn">
                    <i class="bi bi-plus-lg me-1"></i> Add Condition
                </button>
            </div>
            <div id="orConditions">
                @if (!orFilters.Any())
                {
                    <div class="text-muted small p-3 bg-light rounded empty-message">
                        <i class="bi bi-info-circle me-1"></i>
                        No conditions added. Optional: add criteria to further filter results.
                    </div>
                }
                else
                {
                    var orIndex = 0;
                    foreach (var filter in orFilters)
                    {
                        <div class="filter-condition d-flex gap-2 align-items-start mb-2" data-index="@orIndex" data-logic="OR" data-initial-value="@filter.Value">
                            <select name="Conditions.OrFilters[@orIndex].Field" class="form-select form-select-sm attribute-select" style="width: 200px;">
                                <option value="">Select field...</option>
                                @foreach (var attr in Model.Attributes)
                                {
                                    <option value="@attr.Field" data-type="@attr.Type" selected="@(filter.Field == attr.Field)">@attr.Label</option>
                                }
                            </select>
                            <select name="Conditions.OrFilters[@orIndex].Operator" class="form-select form-select-sm operator-select" style="width: 200px;">
                                @{
                                    var attrDef = Model.Attributes.FirstOrDefault(a => a.Field == filter.Field);
                                    if (attrDef?.Operators != null)
                                    {
                                        foreach (var op in attrDef.Operators)
                                        {
                                            <option value="@op.Value" data-requires-value="@op.RequiresValue.ToString().ToLower()" selected="@(filter.Operator == op.Value)">@op.Label</option>
                                        }
                                    }
                                }
                            </select>
                            <div class="value-input-container flex-grow-1" style="min-width: 200px;">
                                <!-- Placeholder - will be initialized by JS based on field type -->
                                <input type="hidden" name="Conditions.OrFilters[@orIndex].Value" value="@filter.Value">
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger remove-condition-btn" title="Remove">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        orIndex++;
                    }
                }
            </div>
        </div>
        
        @if (Model.ShowHelp)
        {
            <div class="alert alert-info small mt-4 mb-0">
                <i class="bi bi-lightbulb me-1"></i>
                <strong>How it works:</strong> First, tickets are filtered to match <em>all</em> AND conditions. Then, from those results, only tickets that <em>also</em> match at least one OR condition are kept. If no OR conditions are set, only the AND filter applies.
            </div>
        }
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const card = document.getElementById('filterBuilderCard');
    if (!card) return;
    
    const attributes = JSON.parse(card.dataset.attributes || '[]');
    const statuses = JSON.parse(card.dataset.statuses || '[]');
    const priorities = JSON.parse(card.dataset.priorities || '[]');
    const users = JSON.parse(card.dataset.users || '[]');
    const teams = JSON.parse(card.dataset.teams || '[]');
    
    // Initialize counters based on existing conditions
    const existingAndConditions = document.querySelectorAll('#andConditions .filter-condition');
    const existingOrConditions = document.querySelectorAll('#orConditions .filter-condition');
    let andIndex = existingAndConditions.length;
    let orIndex = existingOrConditions.length;
    
    // Attach handlers and initialize value inputs for existing rows
    existingAndConditions.forEach(row => {
        attachConditionHandlers(row);
        initializeExistingCondition(row);
    });
    existingOrConditions.forEach(row => {
        attachConditionHandlers(row);
        initializeExistingCondition(row);
    });
    
    document.getElementById('addAndConditionBtn')?.addEventListener('click', () => addCondition('AND', andIndex++));
    document.getElementById('addOrConditionBtn')?.addEventListener('click', () => addCondition('OR', orIndex++));
    
    function initializeExistingCondition(row) {
        const attrSelect = row.querySelector('.attribute-select');
        const opSelect = row.querySelector('.operator-select');
        const initialValue = row.dataset.initialValue || '';
        
        if (attrSelect && attrSelect.value) {
            const attr = attributes.find(a => a.field === attrSelect.value);
            const operator = opSelect?.value;
            updateValueInput(row, attr, operator, initialValue);
        }
    }
    
    function addCondition(logic, index) {
        const container = logic === 'AND' ? document.getElementById('andConditions') : document.getElementById('orConditions');
        const emptyMsg = container.querySelector('.empty-message');
        if (emptyMsg) emptyMsg.remove();
        
        const prefix = logic === 'AND' ? 'Conditions.AndFilters' : 'Conditions.OrFilters';
        const row = document.createElement('div');
        row.className = 'filter-condition d-flex gap-2 align-items-start mb-2';
        row.dataset.index = index;
        row.dataset.logic = logic;
        
        row.innerHTML = `
            <select name="${prefix}[${index}].Field" class="form-select form-select-sm attribute-select" style="width: 200px;">
                <option value="">Select field...</option>
                ${attributes.map(a => `<option value="${a.field}" data-type="${a.type}">${a.label}</option>`).join('')}
            </select>
            <select name="${prefix}[${index}].Operator" class="form-select form-select-sm operator-select" style="width: 200px;">
                <option value="">Select operator...</option>
            </select>
            <div class="value-input-container flex-grow-1" style="min-width: 200px;">
                <input type="text" name="${prefix}[${index}].Value" class="form-control form-control-sm" placeholder="Value...">
            </div>
            <button type="button" class="btn btn-sm btn-outline-danger remove-condition-btn" title="Remove">
                <i class="bi bi-x-lg"></i>
            </button>
        `;
        
        container.appendChild(row);
        attachConditionHandlers(row);
    }
    
    function attachConditionHandlers(row) {
        const attrSelect = row.querySelector('.attribute-select');
        const opSelect = row.querySelector('.operator-select');
        const removeBtn = row.querySelector('.remove-condition-btn');
        
        if (attrSelect) {
            attrSelect.addEventListener('change', function() {
                const attr = attributes.find(a => a.field === this.value);
                updateOperators(opSelect, attr);
                updateValueInput(row, attr, opSelect?.value);
            });
        }
        
        if (opSelect) {
            opSelect.addEventListener('change', function() {
                const attr = attributes.find(a => a.field === attrSelect?.value);
                updateValueInput(row, attr, this.value);
            });
        }
        
        if (removeBtn) {
            removeBtn.addEventListener('click', () => row.remove());
        }
    }
    
    function updateOperators(opSelect, attr) {
        if (!opSelect || !attr || !attr.operators) {
            opSelect.innerHTML = '<option value="">Select operator...</option>';
            return;
        }
        opSelect.innerHTML = attr.operators.map(op => 
            `<option value="${op.value}" data-requires-value="${op.requiresValue}">${op.label}</option>`
        ).join('');
    }
    
    function updateValueInput(row, attr, operator, existingValue = '') {
        const container = row.querySelector('.value-input-container');
        const prefix = row.dataset.logic === 'AND' ? 'Conditions.AndFilters' : 'Conditions.OrFilters';
        const index = row.dataset.index;
        const fieldName = `${prefix}[${index}].Value`;
        
        // Hide value for operators that don't require a value
        const noValueOps = ['is_empty', 'is_not_empty', 'is_true', 'is_false'];
        if (noValueOps.includes(operator)) {
            container.innerHTML = `<input type="hidden" name="${fieldName}" value="">
                <span class="form-control form-control-sm text-muted bg-light">No value needed</span>`;
            return;
        }
        
        if (!attr) {
            container.innerHTML = `<input type="text" name="${fieldName}" class="form-control form-control-sm" value="${existingValue}" placeholder="Value...">`;
            return;
        }
        
        // Handle "is within" date operators - use number input
        if (operator && operator.startsWith('is_within_')) {
            container.innerHTML = `<input type="number" name="${fieldName}" class="form-control form-control-sm" min="1" value="${existingValue}" placeholder="Enter number...">`;
            return;
        }
        
        switch (attr.type) {
            case 'status':
                container.innerHTML = `<select name="${fieldName}" class="form-select form-select-sm">
                    <option value="">Select status...</option>
                    ${statuses.map(s => `<option value="${s.value}" ${s.value === existingValue ? 'selected' : ''}>${s.label}</option>`).join('')}
                </select>`;
                break;
            case 'priority':
                container.innerHTML = `<select name="${fieldName}" class="form-select form-select-sm">
                    <option value="">Select priority...</option>
                    ${priorities.map(p => `<option value="${p.value}" ${p.value === existingValue ? 'selected' : ''}>${p.label}</option>`).join('')}
                </select>`;
                break;
            case 'user':
                container.innerHTML = `<select name="${fieldName}" class="form-select form-select-sm">
                    <option value="">Select user...</option>
                    ${users.map(u => `<option value="${u.id}" ${u.id === existingValue ? 'selected' : ''}>${u.name}${u.isDeactivated ? ' (deactivated)' : ''}</option>`).join('')}
                </select>`;
                break;
            case 'team':
                container.innerHTML = `<select name="${fieldName}" class="form-select form-select-sm">
                    <option value="">Select team...</option>
                    ${teams.map(t => `<option value="${t.id}" ${t.id === existingValue ? 'selected' : ''}>${t.name}</option>`).join('')}
                </select>`;
                break;
            case 'boolean':
                container.innerHTML = `<input type="hidden" name="${fieldName}" value="">
                    <span class="form-control form-control-sm text-muted bg-light">No value needed</span>`;
                break;
            case 'date':
                container.innerHTML = `<input type="date" name="${fieldName}" class="form-control form-control-sm" value="${existingValue}">`;
                break;
            default:
                container.innerHTML = `<input type="text" name="${fieldName}" class="form-control form-control-sm" value="${existingValue}" placeholder="Value...">`;
        }
    }
});
</script>
