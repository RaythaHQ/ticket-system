@using System.Text.Json
@model App.Web.Areas.Staff.Pages.Shared.Models.FilterBuilderViewModel

@{
    Layout = null;
    // Use camelCase for JSON to match JavaScript expectations
    var jsonOptions = new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase };
    var attributesJson = JsonSerializer.Serialize(Model.Attributes, jsonOptions);
    var usersJson = JsonSerializer.Serialize(Model.Users, jsonOptions);
    var teamsJson = JsonSerializer.Serialize(Model.Teams, jsonOptions);
    var statusesJson = JsonSerializer.Serialize(Model.Statuses, jsonOptions);
    var prioritiesJson = JsonSerializer.Serialize(Model.Priorities, jsonOptions);
    var datePresetsJson = JsonSerializer.Serialize(Model.DatePresets, jsonOptions);
    
    // For now, all existing conditions go to AND section (we'll enhance later to support OR)
    var andFilters = Model.Conditions?.Filters ?? new List<App.Application.TicketViews.ViewFilterCondition>();
}

<div class="staff-card mb-4" data-filter-builder
     data-attributes="@attributesJson"
     data-users="@usersJson"
     data-teams="@teamsJson"
     data-statuses="@statusesJson"
     data-priorities="@prioritiesJson"
     data-date-presets="@datePresetsJson">
    
    <div class="staff-card-header">
        <h6 class="mb-0">
            <i class="bi bi-funnel me-2 text-primary"></i>
            Filter Conditions
        </h6>
    </div>
    <div class="staff-card-body">
        <!-- Match ALL Section -->
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <span class="badge bg-primary me-2">AND</span>
                    <span class="fw-semibold">Match All</span>
                    <span class="text-muted ms-2 small">(ticket must meet all these criteria)</span>
                </div>
                <button type="button" class="btn btn-sm btn-outline-primary" data-add-and-condition>
                    <i class="bi bi-plus-lg me-1"></i> Add Condition
                </button>
            </div>
            <div class="and-conditions" id="andConditions">
                @if (!andFilters.Any())
                {
                    <div class="text-muted small p-3 bg-light rounded empty-message">
                        <i class="bi bi-info-circle me-1"></i>
                        No conditions added. Click "Add Condition" to filter tickets.
                    </div>
                }
                else
                {
                    var index = 0;
                    foreach (var filter in andFilters)
                    {
                        <div class="filter-condition d-flex gap-2 align-items-start mb-2" data-index="@index" data-logic="AND">
                            <select name="AndConditions[@index].Field" class="form-select form-select-sm attribute-select" style="width: 200px;">
                                <option value="">Select field...</option>
                                @foreach (var attr in Model.Attributes)
                                {
                                    <option value="@attr.Field" data-type="@attr.Type" selected="@(filter.Field == attr.Field)">@attr.Label</option>
                                }
                            </select>
                            <select name="AndConditions[@index].Operator" class="form-select form-select-sm operator-select" style="width: 180px;">
                                @{
                                    var attrDef = Model.Attributes.FirstOrDefault(a => a.Field == filter.Field);
                                    if (attrDef?.Operators != null)
                                    {
                                        foreach (var op in attrDef.Operators)
                                        {
                                            <option value="@op.Value" selected="@(filter.Operator == op.Value)">@op.Label</option>
                                        }
                                    }
                                }
                            </select>
                            <div class="value-input-container flex-grow-1" style="min-width: 200px;">
                                <input type="text" name="AndConditions[@index].Value" class="form-control form-control-sm value-input" value="@filter.Value" placeholder="Value...">
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger remove-condition" title="Remove">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        index++;
                    }
                }
            </div>
        </div>
        
        <hr class="my-4">
        
        <!-- Match ANY Section -->
        <div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <span class="badge bg-warning text-dark me-2">OR</span>
                    <span class="fw-semibold">Match Any</span>
                    <span class="text-muted ms-2 small">(also include tickets matching any of these)</span>
                </div>
                <button type="button" class="btn btn-sm btn-outline-warning" data-add-or-condition>
                    <i class="bi bi-plus-lg me-1"></i> Add Condition
                </button>
            </div>
            <div class="or-conditions" id="orConditions">
                <div class="text-muted small p-3 bg-light rounded empty-message">
                    <i class="bi bi-info-circle me-1"></i>
                    No conditions added. These are optional additional matches.
                </div>
            </div>
        </div>
        
        @if (Model.ShowHelp)
        {
            <div class="alert alert-info small mt-4 mb-0">
                <i class="bi bi-lightbulb me-1"></i>
                <strong>How it works:</strong> First, tickets are filtered to match <em>all</em> AND conditions. Then, tickets matching <em>any</em> OR condition are also included.
            </div>
        }
    </div>
</div>
