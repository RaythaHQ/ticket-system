@using Microsoft.AspNetCore.Mvc.TagHelpers
@model App.Web.Areas.Shared.Models.BaseTableCreateAndSearchBarViewModel

@{
    Layout = null;
}

<div class="staff-table-toolbar d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
    @if (!string.IsNullOrEmpty(Model.CreateActionName))
    {
        <a class="btn btn-primary" asp-area="Staff" asp-page="@Model.CreateActionName">
            <i class="bi bi-plus-lg me-2"></i>Create @Model.EntityName
        </a>
    }
    else
    {
        <div></div>
    }
    <form class="d-flex gap-2" asp-area="Staff" asp-page="@Model.Pagination.PageName" method="get">
        <div class="input-group" style="width: 300px;">
            <span class="input-group-text bg-white border-end-0">
                <i class="bi bi-search text-muted"></i>
            </span>
            <input class="form-control border-start-0 ps-0" type="search" placeholder="Search..." 
                   aria-label="Search" name="search" value="@Model.Pagination.Search">
        </div>
        <button class="btn btn-outline-primary" type="submit">Search</button>
    </form>
</div>
