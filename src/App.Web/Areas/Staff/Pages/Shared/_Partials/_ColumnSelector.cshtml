@using System.Text.Json
@model App.Web.Areas.Staff.Pages.Shared.Models.ColumnSelectorViewModel

@{
    Layout = null;
    var columnsJson = JsonSerializer.Serialize(Model.AvailableColumns);
    var selectedFields = Model.SelectedColumns ?? new List<string>();
}

<div class="staff-card mb-4">
    <div class="staff-card-header">
        <h6 class="mb-0">
            <i class="fas fa-columns me-2 text-primary"></i>
            Visible Columns
        </h6>
    </div>
    <div class="staff-card-body">
        <div data-column-selector data-columns="@columnsJson">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-muted small mb-3">Available Columns</h6>
                    <div class="column-list">
                        @foreach (var col in Model.AvailableColumns)
                        {
                            var isSelected = selectedFields.Contains(col.Field, StringComparer.OrdinalIgnoreCase);
                            <div class="column-row form-check mb-2 p-2 rounded @(isSelected ? "selected bg-light" : "")" data-field="@col.Field">
                                <input type="checkbox" 
                                       class="form-check-input column-checkbox" 
                                       id="col_@col.Field" 
                                       value="@col.Field"
                                       @(isSelected ? "checked" : "")>
                                <label class="form-check-label" for="col_@col.Field">
                                    @col.Label
                                    @if (col.IsClickable)
                                    {
                                        <i class="fas fa-link ms-1 text-muted small" title="Clickable link"></i>
                                    }
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted small mb-3">Selected Order <span class="text-muted">(drag to reorder)</span></h6>
                    <div class="selected-columns border rounded p-2" style="min-height: 200px;">
                        @{
                            var index = 0;
                            foreach (var field in selectedFields)
                            {
                                var col = Model.AvailableColumns.FirstOrDefault(c => c.Field.Equals(field, StringComparison.OrdinalIgnoreCase));
                                if (col != null)
                                {
                                    <div class="selected-column d-flex gap-2 align-items-center mb-2 p-2 bg-light rounded" data-field="@col.Field">
                                        <span class="drag-handle text-muted cursor-move" title="Drag to reorder">
                                            <i class="fas fa-grip-vertical"></i>
                                        </span>
                                        <span class="flex-grow-1">@col.Label</span>
                                        <input type="hidden" name="VisibleColumns[@index]" value="@col.Field">
                                        <button type="button" class="btn btn-sm btn-outline-danger remove-column" title="Remove column">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    index++;
                                }
                            }
                        }
                    </div>
                </div>
            </div>
            
            @if (Model.ShowHelp)
            {
                <p class="text-muted small mt-3 mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Check columns to display, then drag to set the order. The search bar will only search visible columns.
                </p>
            }
        </div>
    </div>
</div>

<style>
.cursor-move { cursor: move; }
.column-item-ghost { opacity: 0.4; background: #e3f2fd !important; }
.column-row.selected { border-left: 3px solid var(--staff-primary, #009ddc); }
</style>

@section Scripts {
    <script src="~/admin/js/shared/column-selector.js"></script>
}

