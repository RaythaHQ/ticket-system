@inject App.Application.Common.Interfaces.ICurrentUser CurrentUser
@inject App.Application.Common.Interfaces.ICurrentOrganization CurrentOrganization
@inject App.Application.TicketViews.IFavoriteViewsService FavoriteViewsService
@using App.Web.Areas.Admin.Pages.Shared
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staff Portal</title>
    <link rel="stylesheet" href="~/admin/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin/lib/bootstrap-icons/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/admin/css/volt.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --staff-primary: rgb(0, 157, 220);
            --staff-primary-rgb: 0, 157, 220;
            --staff-primary-dark: rgb(0, 130, 185);
            --staff-primary-light: rgba(0, 157, 220, 0.1);
            --staff-secondary: #FED65A;
            --staff-secondary-rgb: 254, 214, 90;
            --staff-sidebar-bg: #0a1929;
            --staff-sidebar-hover: rgba(0, 157, 220, 0.15);
            --staff-sidebar-active: rgba(0, 157, 220, 0.25);
            --staff-text-muted: #64748b;
            --staff-border: #e2e8f0;
            --staff-card-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
            --staff-card-shadow-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f8fafc;
            color: #1e293b;
        }

        /* Sidebar Styles */
        .staff-sidebar {
            background: linear-gradient(180deg, var(--staff-sidebar-bg) 0%, #0d2137 100%);
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            width: 260px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            border-right: 1px solid rgba(255, 255, 255, 0.05);
        }

        .staff-sidebar-brand {
            padding: 1.5rem 1.25rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .staff-sidebar-brand .brand-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--staff-primary) 0%, var(--staff-primary-dark) 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            box-shadow: 0 4px 12px rgba(var(--staff-primary-rgb), 0.4);
        }

        .staff-sidebar-brand h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1.125rem;
            color: white;
            letter-spacing: -0.02em;
        }

        .staff-sidebar-brand small {
            color: var(--staff-secondary);
            font-size: 0.7rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .staff-nav {
            padding: 1rem 0.75rem;
            flex-grow: 1;
            overflow-y: auto;
        }

        .staff-nav-section {
            margin-bottom: 1.5rem;
        }

        .staff-nav-section-title {
            color: rgba(255, 255, 255, 0.4);
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            padding: 0.5rem 0.75rem;
            margin-bottom: 0.25rem;
        }

        .staff-nav-link {
            color: rgba(255, 255, 255, 0.7);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 0.875rem;
            text-decoration: none;
            transition: all 0.2s ease;
            margin-bottom: 0.25rem;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .staff-nav-link:hover {
            color: white;
            background-color: var(--staff-sidebar-hover);
        }

        .staff-nav-link.active {
            color: white;
            background: linear-gradient(135deg, var(--staff-primary) 0%, var(--staff-primary-dark) 100%);
            box-shadow: 0 4px 12px rgba(var(--staff-primary-rgb), 0.35);
        }

        .staff-nav-link i {
            font-size: 1.25rem;
            width: 24px;
            text-align: center;
        }

        .staff-nav-link .nav-badge {
            margin-left: auto;
            background: var(--staff-secondary);
            color: #1e293b;
            font-size: 0.7rem;
            font-weight: 700;
            padding: 0.2rem 0.5rem;
            border-radius: 999px;
        }

        .staff-nav-link.has-submenu {
            cursor: pointer;
        }

        .staff-nav-link.has-submenu .submenu-arrow {
            margin-left: auto;
            transition: transform 0.2s ease;
            font-size: 0.875rem;
        }

        .staff-nav-link.has-submenu.expanded .submenu-arrow {
            transform: rotate(90deg);
        }

        .staff-submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            padding-left: 0.5rem;
        }

        .staff-submenu.expanded {
            max-height: 1000px;
        }

        .staff-submenu-link {
            color: rgba(255, 255, 255, 0.6);
            padding: 0.625rem 1rem 0.625rem 2.5rem;
            border-radius: 6px;
            display: block;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .staff-submenu-link:hover {
            color: white;
            background-color: var(--staff-sidebar-hover);
        }

        .staff-submenu-link.active {
            color: white;
            background: linear-gradient(135deg, var(--staff-primary) 0%, var(--staff-primary-dark) 100%);
        }
        
        .staff-submenu-divider {
            height: 1px;
            background: rgba(255, 255, 255, 0.15);
            margin: 0.5rem 1rem 0.5rem 2.5rem;
        }

        .staff-user-section {
            padding: 1rem 1.25rem;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            background: rgba(0, 0, 0, 0.2);
        }

        .staff-user-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .staff-user-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--staff-secondary) 0%, #f5c842 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #1e293b;
            font-weight: 600;
            font-size: 1rem;
        }

        .staff-user-details {
            flex: 1;
            min-width: 0;
        }

        .staff-user-name {
            color: white;
            font-weight: 600;
            font-size: 0.9rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .staff-user-role {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.75rem;
        }

        .staff-user-dropdown {
            position: relative;
        }

        .staff-user-dropdown-toggle {
            width: 100%;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem;
            border-radius: 8px;
            background: transparent;
            border: none;
            color: white;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .staff-user-dropdown-toggle:hover {
            background-color: var(--staff-sidebar-hover);
        }

        .staff-user-dropdown-menu {
            position: absolute;
            bottom: 100%;
            left: 0;
            right: 0;
            margin-bottom: 0.5rem;
            background: var(--staff-sidebar-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            padding: 0.5rem 0;
            display: none;
            z-index: 1001;
        }

        .staff-user-dropdown-menu.show {
            display: block;
        }

        .staff-user-dropdown-item {
            display: block;
            padding: 0.75rem 1rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            font-size: 0.875rem;
            transition: all 0.2s ease;
        }

        .staff-user-dropdown-item:hover {
            background-color: var(--staff-sidebar-hover);
            color: white;
        }

        .staff-admin-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            border-radius: 8px;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .staff-admin-link:hover {
            background-color: var(--staff-sidebar-hover);
            color: white;
        }

        .staff-admin-link i {
            font-size: 1.125rem;
        }

        /* Main Content Area */
        .staff-main {
            margin-left: 260px;
            min-height: 100vh;
        }

        .staff-topbar {
            background: white;
            border-bottom: 1px solid var(--staff-border);
            padding: 0.875rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .staff-topbar-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .staff-topbar-breadcrumb {
            font-size: 0.875rem;
            color: var(--staff-text-muted);
        }

        .staff-topbar-breadcrumb a {
            color: var(--staff-primary);
            text-decoration: none;
        }

        .staff-topbar-actions {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .staff-topbar-btn {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            border: 1px solid var(--staff-border);
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--staff-text-muted);
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .staff-topbar-btn:hover {
            background: var(--staff-primary-light);
            border-color: var(--staff-primary);
            color: var(--staff-primary);
        }

        .staff-content {
            padding: 2rem;
        }

        /* Card Styles */
        .staff-card {
            background: white;
            border-radius: 12px;
            border: 1px solid var(--staff-border);
            box-shadow: var(--staff-card-shadow);
            transition: box-shadow 0.2s ease;
        }

        .staff-card:hover {
            box-shadow: var(--staff-card-shadow-hover);
        }

        .staff-card-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--staff-border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .staff-card-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1rem;
            color: #1e293b;
        }

        .staff-card-body {
            padding: 1.5rem;
        }

        /* Table Styles */
        .staff-table {
            margin: 0;
        }

        .staff-table thead th {
            background: #f8fafc;
            border-bottom: 2px solid var(--staff-border);
            color: var(--staff-text-muted);
            font-weight: 600;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: 1rem 1.25rem;
        }

        .staff-table tbody td {
            padding: 1rem 1.25rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--staff-border);
        }

        .staff-table tbody tr:hover {
            background-color: var(--staff-primary-light);
        }

        .staff-table tbody tr:last-child td {
            border-bottom: none;
        }

        /* Sticky Actions Column */
        .staff-table th:last-child,
        .staff-table td:last-child {
            position: sticky;
            right: 0;
            background: #fff !important;
            box-shadow: -4px 0 8px -4px rgba(0, 0, 0, 0.1);
            z-index: 1;
        }

        .staff-table thead th:last-child {
            background: #f8fafc !important;
            z-index: 2;
        }

        .staff-table tbody tr:hover td:last-child {
            background: #fff !important;
        }

        /* Badge Styles */
        .staff-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.35rem 0.75rem;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 6px;
        }

        .staff-badge-primary {
            background: var(--staff-primary-light);
            color: var(--staff-primary);
        }

        .staff-badge-success {
            background: rgba(16, 185, 129, 0.1);
            color: #059669;
        }

        .staff-badge-warning {
            background: rgba(245, 158, 11, 0.1);
            color: #d97706;
        }

        .staff-badge-danger {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
        }

        .staff-badge-secondary {
            background: #f1f5f9;
            color: var(--staff-text-muted);
        }

        /* Button Styles */
        .btn-primary {
            background: linear-gradient(135deg, var(--staff-primary) 0%, var(--staff-primary-dark) 100%);
            border: none;
            box-shadow: 0 4px 12px rgba(var(--staff-primary-rgb), 0.35);
            font-weight: 500;
            padding: 0.625rem 1.25rem;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--staff-primary-dark) 0%, var(--staff-primary) 100%);
            box-shadow: 0 6px 16px rgba(var(--staff-primary-rgb), 0.45);
            transform: translateY(-1px);
        }

        .btn-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: none;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.35);
            font-weight: 500;
            border-radius: 8px;
        }

        .btn-outline-primary {
            color: var(--staff-primary);
            border-color: var(--staff-primary);
            font-weight: 500;
            border-radius: 8px;
        }

        .btn-outline-primary:hover {
            background: var(--staff-primary);
            border-color: var(--staff-primary);
        }

        .btn-outline-secondary {
            color: var(--staff-text-muted);
            border-color: var(--staff-border);
            font-weight: 500;
            border-radius: 8px;
        }

        /* Form Styles */
        .form-control,
        .form-select {
            border-radius: 8px;
            border-color: var(--staff-border);
            padding: 0.625rem 1rem;
            font-size: 0.9rem;
            transition: all 0.2s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--staff-primary);
            box-shadow: 0 0 0 3px rgba(var(--staff-primary-rgb), 0.15);
        }

        .form-label {
            font-weight: 500;
            font-size: 0.875rem;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        /* Input Group Styles */
        .input-group .input-group-text {
            border-color: var(--staff-border);
            background: white;
        }

        .input-group .form-control {
            border-color: var(--staff-border);
        }

        .input-group:focus-within .input-group-text,
        .input-group:focus-within .form-control {
            border-color: var(--staff-primary);
        }

        /* Back Link */
        .staff-back-link {
            display: inline-flex;
            align-items: center;
            color: var(--staff-text-muted);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.875rem;
            padding: 0.5rem 0;
            margin-bottom: 1rem;
            transition: color 0.2s ease;
        }

        .staff-back-link:hover {
            color: var(--staff-primary);
        }

        /* Stat Cards */
        .staff-stat-card {
            background: white;
            border-radius: 12px;
            border: 1px solid var(--staff-border);
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        .staff-stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--staff-primary), var(--staff-secondary));
        }

        .staff-stat-card.primary::before {
            background: var(--staff-primary);
        }

        .staff-stat-card.success::before {
            background: #10b981;
        }

        .staff-stat-card.warning::before {
            background: var(--staff-secondary);
        }

        .staff-stat-card.secondary::before {
            background: #64748b;
        }

        .staff-stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }

        .staff-stat-icon.primary {
            background: var(--staff-primary-light);
            color: var(--staff-primary);
        }

        .staff-stat-icon.success {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
        }

        .staff-stat-icon.warning {
            background: rgba(254, 214, 90, 0.2);
            color: #d97706;
        }

        .staff-stat-icon.secondary {
            background: #f1f5f9;
            color: #64748b;
        }

        .staff-stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #1e293b;
            line-height: 1.2;
        }

        .staff-stat-label {
            color: var(--staff-text-muted);
            font-size: 0.875rem;
            font-weight: 500;
        }

        /* Quick View Buttons */
        .staff-quick-views {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .staff-quick-view-btn {
            padding: 0.5rem 1rem;
            border-radius: 999px;
            font-size: 0.875rem;
            font-weight: 500;
            border: 1px solid var(--staff-border);
            background: white;
            color: var(--staff-text-muted);
            transition: all 0.2s ease;
        }

        .staff-quick-view-btn:hover {
            border-color: var(--staff-primary);
            color: var(--staff-primary);
        }

        .staff-quick-view-btn.active {
            background: var(--staff-primary);
            border-color: var(--staff-primary);
            color: white;
        }

        /* Alert Overrides */
        .alert {
            border-radius: 10px;
            border: none;
            font-weight: 500;
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.1);
            color: #059669;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
        }

        .alert-warning {
            background: rgba(245, 158, 11, 0.1);
            color: #d97706;
        }

        .alert-info {
            background: var(--staff-primary-light);
            color: var(--staff-primary);
        }

        /* Page Heading */
        .staff-page-heading {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .staff-page-heading h1 {
            font-weight: 700;
            color: #1e293b;
            letter-spacing: -0.02em;
        }

        /* Responsive */
        @@media (max-width: 991.98px) {
            .staff-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .staff-sidebar.show {
                transform: translateX(0);
            }

            .staff-main {
                margin-left: 0;
            }
        }
    </style>

    @RenderSection("headstyles", false)
</head>

<body data-active-menu="@ViewData["ActiveMenu"]">
    <!-- Sidebar -->
    <aside class="staff-sidebar">
        <div class="staff-sidebar-brand">
            <div class="brand-icon">
                <i class="bi bi-headset"></i>
            </div>
            <div>
                <h5>Nova Ticket System</h5>
                <small>Staff Portal</small>
            </div>
        </div>

        <nav class="staff-nav">
            <div class="staff-nav-section">
                <div class="staff-nav-section-title">Main</div>
                <a asp-area="Staff" asp-page="@RouteNames.Dashboard.Index"
                    class="staff-nav-link @(ViewData["ActiveMenu"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-grid-1x2"></i>
                    <span>Dashboard</span>
                </a>
                <div class="staff-nav-item">
                    <span class="staff-nav-link has-submenu expanded @(ViewData["ActiveMenu"]?.ToString() == "Tickets" ? "active" : "")"
                        onclick="toggleSubmenu(event, 'tickets-submenu')">
                        <i class="bi bi-ticket-detailed"></i>
                        <span>Tickets</span>
                        <i class="bi bi-chevron-right submenu-arrow"></i>
                    </span>
                    <div class="staff-submenu expanded" id="tickets-submenu">
                        <a asp-area="Staff" asp-page="@RouteNames.Tickets.Index" asp-route-builtInView="unassigned"
                            class="staff-submenu-link @(ViewData["ActiveSubMenu"]?.ToString() == "Unassigned" ? "active" : "")">
                            Unassigned
                        </a>
                        <a asp-area="Staff" asp-page="@RouteNames.Tickets.Index" asp-route-builtInView="my-tickets"
                            class="staff-submenu-link @(ViewData["ActiveSubMenu"]?.ToString() == "MyTickets" ? "active" : "")">
                            My Tickets
                        </a>
                        <a asp-area="Staff" asp-page="@RouteNames.Tickets.Index" asp-route-builtInView="created-by-me"
                            class="staff-submenu-link @(ViewData["ActiveSubMenu"]?.ToString() == "CreatedByMe" ? "active" : "")">
                            Created by Me
                        </a>
                        <a asp-area="Staff" asp-page="@RouteNames.Tickets.Index" asp-route-builtInView="team-tickets"
                            class="staff-submenu-link @(ViewData["ActiveSubMenu"]?.ToString() == "TeamTickets" ? "active" : "")">
                            Team Tickets
                        </a>
                        <a asp-area="Staff" asp-page="@RouteNames.Tickets.Index" asp-route-builtInView="overdue"
                            class="staff-submenu-link @(ViewData["ActiveSubMenu"]?.ToString() == "Overdue" ? "active" : "")">
                            Overdue
                        </a>
                        <a asp-area="Staff" asp-page="@RouteNames.Tickets.Index" asp-route-builtInView="all"
                            class="staff-submenu-link @(ViewData["ActiveSubMenu"]?.ToString() == "AllTickets" ? "active" : "")">
                            All Tickets
                        </a>
                        @{
                            var favoriteViews = (await FavoriteViewsService.GetUserFavoriteViewsAsync()).ToList();
                        }
                        @if (favoriteViews.Any())
                        {
                            <div class="staff-submenu-divider"></div>
                            @foreach (var fav in favoriteViews)
                            {
                                <a asp-area="Staff" asp-page="@RouteNames.Tickets.Index" asp-route-viewId="@fav.ViewId" asp-route-sortBy="view"
                                    class="staff-submenu-link @(ViewData["ActiveViewId"]?.ToString() == fav.ViewId.ToString() ? "active" : "")">
                                    <i class="bi bi-star-fill me-1" style="color: #ffc107; font-size: 0.7rem;"></i>@fav.Name
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="staff-nav-section">
                <div class="staff-nav-section-title">Manage</div>
                <a asp-area="Staff" asp-page="@RouteNames.Views.Index"
                    class="staff-nav-link @(ViewData["ActiveMenu"]?.ToString() == "Views" ? "active" : "")">
                    <i class="bi bi-layout-text-window"></i>
                    <span>Views</span>
                </a>
                <a asp-area="Staff" asp-page="@RouteNames.Contacts.Index"
                    class="staff-nav-link @(ViewData["ActiveMenu"]?.ToString() == "Contacts" ? "active" : "")">
                    <i class="bi bi-people"></i>
                    <span>Contacts</span>
                </a>
            </div>
        </nav>

        <div class="staff-user-section">
            @if (CurrentUser.IsAdmin)
            {
                <a href="/admin" class="staff-admin-link">
                    <i class="bi bi-gear"></i>
                    <span>Admin Portal</span>
                </a>
            }
            <div class="staff-user-dropdown">
                <button type="button" class="staff-user-dropdown-toggle" onclick="toggleUserDropdown(event)">
                    <div class="staff-user-avatar">
                        @(CurrentUser.FullName?.FirstOrDefault().ToString().ToUpper() ?? "U")
                    </div>
                    <div class="staff-user-details">
                        <div class="staff-user-name">@CurrentUser.FullName</div>
                        <div class="staff-user-role">Staff Member</div>
                    </div>
                    <i class="bi bi-chevron-up ms-auto" id="user-dropdown-icon"></i>
                </button>
                <div class="staff-user-dropdown-menu" id="user-dropdown-menu">
                    <a asp-area="Admin" asp-page="@App.Web.Areas.Admin.Pages.Shared.RouteNames.Profile.Index"
                        class="staff-user-dropdown-item">
                        <i class="bi bi-person me-2"></i> Profile
                    </a>
                    @if (CurrentOrganization.EmailAndPasswordIsEnabledForAdmins)
                    {
                        <a asp-area="Admin" asp-page="@App.Web.Areas.Admin.Pages.Shared.RouteNames.Profile.ChangePassword"
                            class="staff-user-dropdown-item">
                            <i class="bi bi-key me-2"></i> Change Password
                        </a>
                    }
                    <a asp-area="Admin" asp-page="@App.Web.Areas.Admin.Pages.Shared.RouteNames.Login.Logout"
                        class="staff-user-dropdown-item">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="staff-main">
        <header class="staff-topbar">
            <div class="staff-topbar-left">
                <span class="staff-topbar-breadcrumb">
                    <a asp-area="Staff" asp-page="@RouteNames.Dashboard.Index">Home</a>
                    @if (ViewData["Title"] != null && ViewData["Title"].ToString() != "Dashboard")
                    {
                        <span class="mx-2">/</span>
                        <span>@ViewData["Title"]</span>
                    }
                </span>
            </div>
        </header>

        <main class="staff-content">
            <alert />
            @RenderBody()
        </main>
    </div>

    <script src="~/admin/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/lib/sortablejs/Sortable.min.js"></script>
    <script>
        function toggleUserDropdown(event) {
            event.stopPropagation();
            const menu = document.getElementById('user-dropdown-menu');
            const icon = document.getElementById('user-dropdown-icon');
            const isOpen = menu.classList.contains('show');

            if (isOpen) {
                menu.classList.remove('show');
                icon.classList.remove('bi-chevron-down');
                icon.classList.add('bi-chevron-up');
            } else {
                menu.classList.add('show');
                icon.classList.remove('bi-chevron-up');
                icon.classList.add('bi-chevron-down');
            }
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function (event) {
            const menu = document.getElementById('user-dropdown-menu');
            const toggle = event.target.closest('.staff-user-dropdown-toggle');
            if (!toggle && menu.classList.contains('show')) {
                menu.classList.remove('show');
                const icon = document.getElementById('user-dropdown-icon');
                icon.classList.remove('bi-chevron-down');
                icon.classList.add('bi-chevron-up');
            }
        });

        function toggleSubmenu(event, submenuId) {
            event.preventDefault();
            event.stopPropagation();
            const submenu = document.getElementById(submenuId);
            const link = event.currentTarget;
            
            if (submenu.classList.contains('expanded')) {
                submenu.classList.remove('expanded');
                link.classList.remove('expanded');
            } else {
                submenu.classList.add('expanded');
                link.classList.add('expanded');
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
