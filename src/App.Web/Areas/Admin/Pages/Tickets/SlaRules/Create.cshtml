@page "/admin/tickets/sla-rules/create"
@model App.Web.Areas.Admin.Pages.SlaRules.Create

@{
    var pageTitle = "Create SLA Rule";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "SlaRules";
    ViewData["ExpandTicketingMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.SlaRules.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            @(await Html.PartialAsync("_Partials/BackToList", back))

            <form asp-page="@RouteNames.SlaRules.Create" method="post" novalidate>
                <!-- Basic Information -->
                <div class="card border-0 shadow mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Basic Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Name"></label>
                            <input type="text" class="form-control @Model.HasError("Name")" asp-for="Form.Name" 
                                placeholder="e.g., Urgent Priority SLA" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Name")</div>
                        </div>

                        <div class="mb-0">
                            <label class="form-label" asp-for="Form.Description"></label>
                            <textarea class="form-control @Model.HasError("Description")" asp-for="Form.Description"
                                rows="2" placeholder="Optional description of when this rule applies"></textarea>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Description")</div>
                        </div>
                    </div>
                </div>

                <!-- Resolution Target -->
                <div class="card border-0 shadow mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-clock me-2"></i>Resolution Target</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.TargetResolutionValue">
                                Time to Resolve
                            </label>
                            <div class="input-group" style="max-width: 300px;">
                                <input type="number"
                                    class="form-control @Model.HasError("TargetResolutionValue")"
                                    asp-for="Form.TargetResolutionValue" min="1" required>
                                <select class="form-select" asp-for="Form.TargetResolutionUnit" style="max-width: 120px;">
                                    <option value="minutes">Minutes</option>
                                    <option value="hours" selected>Hours</option>
                                    <option value="days">Days</option>
                                </select>
                            </div>
                            <div class="form-text">The maximum time allowed to resolve tickets matching this rule</div>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("TargetResolutionValue")</div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input @Model.HasError("BusinessHoursEnabled")" type="checkbox"
                                asp-for="Form.BusinessHoursEnabled" role="switch" id="businessHoursToggle">
                            <label class="form-check-label" asp-for="Form.BusinessHoursEnabled">
                                <strong>Business Hours Only</strong> — Time only counts during working hours
                            </label>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("BusinessHoursEnabled")</div>
                        </div>

                        <div class="row" id="businessHoursConfig" style="display: none;">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.BusinessHoursStart"></label>
                                    <input type="time" class="form-control @Model.HasError("BusinessHoursStart")"
                                        asp-for="Form.BusinessHoursStart" style="max-width: 150px;">
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("BusinessHoursStart")</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.BusinessHoursEnd"></label>
                                    <input type="time" class="form-control @Model.HasError("BusinessHoursEnd")"
                                        asp-for="Form.BusinessHoursEnd" style="max-width: 150px;">
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("BusinessHoursEnd")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Matching Conditions -->
                <div class="card border-0 shadow mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Matching Conditions</h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            Define which tickets this SLA rule applies to. Leave blank to match all tickets.
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.ConditionPriority"></label>
                                    <select class="form-select @Model.HasError("ConditionPriority")"
                                        asp-for="Form.ConditionPriority">
                                        <option value="">Any Priority</option>
                                        @foreach (var priority in Model.AvailablePriorities)
                                        {
                                            <option value="@priority.DeveloperName">@priority.Label</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("ConditionPriority")</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.ConditionCategory"></label>
                                    <input type="text" class="form-control @Model.HasError("ConditionCategory")"
                                        asp-for="Form.ConditionCategory" placeholder="e.g., Billing">
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("ConditionCategory")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Breach Notifications -->
                <div class="card border-0 shadow mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-bell me-2"></i>Breach Notifications</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input class="form-check-input @Model.HasError("NotifyAssignee")" type="checkbox"
                                asp-for="Form.NotifyAssignee" role="switch" checked>
                            <label class="form-check-label" asp-for="Form.NotifyAssignee">
                                <strong>Notify Assignee</strong> — Send notification when SLA is breached
                            </label>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("NotifyAssignee")</div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success mt-2">Save changes</button>
            </form>
        </div>

        <div class="col-lg-3 col-md-12">
            <div class="card border-0 shadow">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Tips</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-2">
                        <i class="bi bi-lightbulb me-1"></i>
                        <strong>Auto Ordering:</strong> New rules are added to the end of the priority list.
                    </p>
                    <p class="small text-muted mb-2">
                        <i class="bi bi-lightbulb me-1"></i>
                        <strong>Reorder Later:</strong> Use drag & drop on the list page to change priority order.
                    </p>
                    <p class="small text-muted mb-0">
                        <i class="bi bi-lightbulb me-1"></i>
                        <strong>First Match Wins:</strong> Only the first matching active rule applies to each ticket.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggle = document.getElementById('businessHoursToggle');
            const config = document.getElementById('businessHoursConfig');
            
            function updateVisibility() {
                config.style.display = toggle.checked ? 'flex' : 'none';
            }
            
            toggle.addEventListener('change', updateVisibility);
            updateVisibility();
        });
    </script>
}
