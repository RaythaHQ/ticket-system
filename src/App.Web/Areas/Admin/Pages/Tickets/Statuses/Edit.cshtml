@page "/admin/tickets/statuses/edit/{id}"
@model App.Web.Areas.Admin.Pages.Statuses.Edit
@using App.Web.Areas.Shared.Models
@using App.Domain.ValueObjects

@{
    var pageTitle = "Edit Status";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "TicketStatuses";
    ViewData["ExpandTicketingMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.TicketStatuses.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))
                    
                    @if (Model.IsFirst)
                    {
                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle me-2"></i>
                            This is the default status for new tickets. The status type cannot be changed to "Closed" while it is the first in the list.
                        </div>
                    }

                    <form asp-page="@RouteNames.TicketStatuses.Edit" asp-route-id="@Model.Form.Id" method="post" class="py-4">
                        <input type="hidden" asp-for="Form.Id" />

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Label"></label>
                            <input type="text" class="form-control @Model.HasError("Label")" asp-for="Form.Label"
                                   id="label-input" placeholder="e.g., On Hold, Waiting for Customer">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Label")</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Developer Name</label>
                            <div class="d-flex align-items-center">
                                <code class="bg-light px-3 py-2 rounded flex-grow-1">@Model.DeveloperName</code>
                                @if (Model.IsBuiltIn)
                                {
                                    <span class="badge bg-light text-dark border ms-2">
                                        <i class="bi bi-lock-fill me-1"></i>Built-in
                                    </span>
                                }
                            </div>
                            <div class="form-text">Developer name cannot be changed after creation.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.StatusType"></label>
                            @if (Model.IsFirst)
                            {
                                <select class="form-select" disabled>
                                    <option selected>Open - Ticket is active</option>
                                </select>
                                <input type="hidden" asp-for="Form.StatusType" value="@TicketStatusType.OPEN" />
                                <div class="form-text text-warning">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    The first status must be "Open" type. Reorder statuses to change this.
                                </div>
                            }
                            else
                            {
                                <select class="form-select @Model.HasError("StatusType")" asp-for="Form.StatusType" asp-items="Model.StatusTypeOptions"></select>
                                <div class="form-text">Determines how this status affects metrics and filtering.</div>
                            }
                            <div class="invalid-feedback">@Model.ErrorMessageFor("StatusType")</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.ColorName"></label>
                            <select class="form-select @Model.HasError("ColorName")" asp-for="Form.ColorName" asp-items="Model.ColorOptions"
                                    id="color-select"></select>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("ColorName")</div>
                            <div class="mt-2">
                                <span class="me-2">Preview:</span>
                                <span id="color-preview" class="badge bg-@Model.Form.ColorName @(Model.Form.ColorName == "light" ? "text-dark border" : "")">@Model.Form.Label</span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success mt-4">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const colorSelect = document.getElementById('color-select');
            const colorPreview = document.getElementById('color-preview');
            const labelInput = document.getElementById('label-input');

            function updatePreview() {
                const color = colorSelect.value;
                const label = labelInput.value || 'Preview';
                colorPreview.className = 'badge bg-' + color;
                if (color === 'light') {
                    colorPreview.classList.add('text-dark', 'border');
                }
                colorPreview.textContent = label;
            }

            colorSelect.addEventListener('change', updatePreview);
            labelInput.addEventListener('input', updatePreview);
        });
    </script>
}

