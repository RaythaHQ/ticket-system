@page "/admin/tickets/priorities"
@model App.Web.Areas.Admin.Pages.Priorities.Index
@using App.Web.Areas.Shared.Models

@{
    var pageTitle = "Ticket Priorities";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "TicketPriorities";
    ViewData["ExpandTicketingMenu"] = true;
}

<div>
    <partial name="_Partials/PageHeading" model="pageTitle" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-muted mb-0">
            Drag and drop to reorder priorities. Higher priorities (like Urgent) should appear first.
            The order affects sorting and dropdown display throughout the app.
        </p>
        <a asp-page="@RouteNames.TicketPriorities.Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Add Priority
        </a>
    </div>

    <div class="card border-0 shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 50px;"></th>
                            <th>Priority</th>
                            <th>Developer Name</th>
                            <th class="text-center">Default</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="priorities-list">
                        @foreach (var priority in Model.Priorities)
                        {
                            <tr data-id="@priority.Id" class="@(!priority.IsActive ? "table-secondary" : "")">
                                <td class="text-center">
                                    <i class="bi bi-grip-vertical drag-handle" style="cursor: grab; color: #adb5bd;"></i>
                                </td>
                                <td>
                                    <span class="badge bg-@priority.ColorName me-2" style="min-width: 80px;">
                                        @priority.Label
                                    </span>
                                    @if (priority.IsBuiltIn)
                                    {
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-lock-fill me-1"></i>Built-in
                                        </span>
                                    }
                                </td>
                                <td>
                                    <code class="text-muted">@priority.DeveloperName</code>
                                </td>
                                <td class="text-center">
                                    @if (priority.IsDefault)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-lg"></i> Default
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (priority.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="@RouteNames.TicketPriorities.Edit" asp-route-id="@priority.Id"
                                            class="btn btn-outline-secondary">
                                            Edit
                                        </a>
                                        @if (priority.IsActive)
                                        {
                                            <button type="button" class="btn btn-outline-warning toggle-active-btn"
                                                    data-id="@priority.Id" data-active="false"
                                                    title="Deactivate">
                                                <i class="bi bi-pause-fill"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-success toggle-active-btn"
                                                    data-id="@priority.Id" data-active="true"
                                                    title="Activate">
                                                <i class="bi bi-play-fill"></i>
                                            </button>
                                        }
                                        @if (!priority.IsBuiltIn)
                                        {
                                            <button type="button" class="btn btn-outline-danger delete-btn"
                                                    data-id="@priority.Id" data-label="@priority.Label"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow mt-4">
        <div class="card-header bg-light">
            <h6 class="mb-0">Color Legend</h6>
        </div>
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2">
                <span class="badge bg-danger">Danger</span>
                <span class="badge bg-warning text-dark">Warning</span>
                <span class="badge bg-primary">Primary</span>
                <span class="badge bg-success">Success</span>
                <span class="badge bg-info">Info</span>
                <span class="badge bg-secondary">Secondary</span>
                <span class="badge bg-light text-dark border">Light</span>
                <span class="badge bg-dark">Dark</span>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Priority</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the priority "<strong id="deletePriorityLabel"></strong>"? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/lib/sortablejs/Sortable.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const list = document.getElementById('priorities-list');
            
            // Initialize Sortable
            const sortable = new Sortable(list, {
                animation: 150,
                handle: '.drag-handle',
                ghostClass: 'table-primary',
                onEnd: function(evt) {
                    saveOrder();
                }
            });

            function saveOrder() {
                const rows = list.querySelectorAll('tr[data-id]');
                const orderedIds = Array.from(rows).map(row => row.dataset.id);

                fetch('?handler=Reorder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ orderedIds: orderedIds })
                })
                .then(response => response.json())
                .then(data => {
                    if (!data.success) {
                        alert('Failed to save order: ' + (data.message || 'Unknown error'));
                        location.reload();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to save order');
                    location.reload();
                });
            }

            // Toggle active handlers
            document.querySelectorAll('.toggle-active-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    const isActive = this.dataset.active === 'true';

                    fetch('?handler=ToggleActive', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ id: id, isActive: isActive })
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            return response.text().then(text => {
                                alert('Failed: ' + text);
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Failed to update status');
                    });
                });
            });

            // Delete handlers
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    const label = this.dataset.label;
                    
                    document.getElementById('deletePriorityLabel').textContent = label;
                    document.getElementById('deleteForm').action = '/admin/tickets/priorities/delete/' + id;
                    
                    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
                    modal.show();
                });
            });
        });
    </script>
    <form method="post">
        @Html.AntiForgeryToken()
    </form>
}

