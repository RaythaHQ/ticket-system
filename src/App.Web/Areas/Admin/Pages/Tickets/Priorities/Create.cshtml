@page "/admin/tickets/priorities/create"
@model App.Web.Areas.Admin.Pages.Priorities.Create
@using App.Web.Areas.Shared.Models

@{
    var pageTitle = "Create Priority";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "TicketPriorities";
    ViewData["ExpandTicketingMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.TicketPriorities.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))
                    <form asp-page="@RouteNames.TicketPriorities.Create" method="post" class="py-4">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Label"></label>
                            <input type="text" class="form-control @Model.HasError("Label")" asp-for="Form.Label"
                                   id="label-input" placeholder="e.g., Critical, Medium">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Label")</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.DeveloperName"></label>
                            <input type="text" class="form-control @Model.HasError("DeveloperName")" asp-for="Form.DeveloperName"
                                   id="developer-name-input" placeholder="e.g., critical, medium">
                            <div class="form-text">Unique identifier used in API and code. Cannot be changed after creation.</div>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("DeveloperName")</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.ColorName"></label>
                            <select class="form-select @Model.HasError("ColorName")" asp-for="Form.ColorName" asp-items="Model.ColorOptions"
                                    id="color-select"></select>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("ColorName")</div>
                            <div class="mt-2">
                                <span class="me-2">Preview:</span>
                                <span id="color-preview" class="badge bg-secondary">Preview</span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Form.IsDefault">
                                <label class="form-check-label" asp-for="Form.IsDefault">
                                    Set as default priority for new tickets
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success mt-4">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/js/shared/developer-name-sync.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sync label to developer name
            initDeveloperNameSync('label-input', 'developer-name-input');

            // Color preview
            const colorSelect = document.getElementById('color-select');
            const colorPreview = document.getElementById('color-preview');
            const labelInput = document.getElementById('label-input');

            function updatePreview() {
                const color = colorSelect.value;
                const label = labelInput.value || 'Preview';
                colorPreview.className = 'badge bg-' + color;
                if (color === 'light') {
                    colorPreview.classList.add('text-dark', 'border');
                }
                colorPreview.textContent = label;
            }

            colorSelect.addEventListener('change', updatePreview);
            labelInput.addEventListener('input', updatePreview);
            updatePreview();
        });
    </script>
}

