@page "/admin/tickets/system-views/{id}/edit"
@model App.Web.Areas.Admin.Pages.SystemViews.Edit

@{
    var pageTitle = "Edit system view";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "SystemViews";
    ViewData["ExpandTicketingMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.SystemViews.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))
                    <form asp-page="@RouteNames.SystemViews.Edit" asp-route-id="@Model.ViewId" method="post" class="py-4" novalidate>
                    <div class="row">
                        <div class="col-md-8">
                            <!-- Basic Info -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">View Details</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label raytha-required" asp-for="Form.Name"></label>
                                        <input type="text" class="form-control @Model.HasError("Name")" asp-for="Form.Name" required>
                                        <div class="invalid-feedback">@Model.ErrorMessageFor("Name")</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="Form.Description"></label>
                                        <textarea class="form-control @Model.HasError("Description")" asp-for="Form.Description" rows="2"></textarea>
                                        <div class="invalid-feedback">@Model.ErrorMessageFor("Description")</div>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input @Model.HasError("IsDefault")" type="checkbox" asp-for="Form.IsDefault">
                                        <label class="form-check-label" asp-for="Form.IsDefault">
                                            Set as default view for all users
                                        </label>
                                        <div class="invalid-feedback">@Model.ErrorMessageFor("IsDefault")</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Filters -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Filters</h5>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted mb-3">Define which tickets should appear in this view.</p>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" asp-for="Form.StatusFilter"></label>
                                            <select class="form-select @Model.HasError("StatusFilter")" asp-for="Form.StatusFilter" asp-items="Model.AvailableStatuses">
                                                <option value="">Any Status</option>
                                            </select>
                                            <div class="invalid-feedback">@Model.ErrorMessageFor("StatusFilter")</div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" asp-for="Form.PriorityFilter"></label>
                                            <select class="form-select @Model.HasError("PriorityFilter")" asp-for="Form.PriorityFilter" asp-items="Model.AvailablePriorities">
                                                <option value="">Any Priority</option>
                                            </select>
                                            <div class="invalid-feedback">@Model.ErrorMessageFor("PriorityFilter")</div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" asp-for="Form.TeamIdFilter"></label>
                                            <select class="form-select @Model.HasError("TeamIdFilter")" asp-for="Form.TeamIdFilter">
                                                <option value="">Any Team</option>
                                                @foreach (var team in Model.AvailableTeams)
                                                {
                                                    <option value="@team.Id" selected="@(Model.Form.TeamIdFilter == team.Id)">@team.Name</option>
                                                }
                                            </select>
                                            <div class="invalid-feedback">@Model.ErrorMessageFor("TeamIdFilter")</div>
                                        </div>
                                        <div class="col-md-6 mb-3 d-flex align-items-end">
                                            <div class="form-check">
                                                <input class="form-check-input @Model.HasError("UnassignedOnly")" type="checkbox" asp-for="Form.UnassignedOnly">
                                                <label class="form-check-label" asp-for="Form.UnassignedOnly">
                                                    Show only unassigned tickets
                                                </label>
                                                <div class="invalid-feedback">@Model.ErrorMessageFor("UnassignedOnly")</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sorting -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Sorting</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" asp-for="Form.SortField"></label>
                                            <select class="form-select @Model.HasError("SortField")" asp-for="Form.SortField">
                                                <option value="CreationTime">Creation Time</option>
                                                <option value="LastModificationTime">Last Updated</option>
                                                <option value="Title">Title</option>
                                                <option value="Status">Status</option>
                                                <option value="Priority">Priority</option>
                                            </select>
                                            <div class="invalid-feedback">@Model.ErrorMessageFor("SortField")</div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Direction</label>
                                            <div class="form-check">
                                                <input class="form-check-input @Model.HasError("SortDescending")" type="checkbox" asp-for="Form.SortDescending">
                                                <label class="form-check-label" asp-for="Form.SortDescending">
                                                    Descending (newest first)
                                                </label>
                                                <div class="invalid-feedback">@Model.ErrorMessageFor("SortDescending")</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!-- Columns -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Visible Columns</h5>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted small mb-3">Select which columns to display. Search will only match visible columns.</p>
                                    @foreach (var col in Model.AvailableColumns)
                                    {
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" 
                                                   name="SelectedColumnNames" value="@col.Name"
                                                   id="col_@col.Name"
                                                   @(col.Selected ? "checked" : "") />
                                            <label class="form-check-label" for="col_@col.Name">
                                                @col.Label
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-4">Save changes</button> 
                </form>
            </div>
        </div>
    </div>
    </div>
</div>

