@using System.Text.Json
@using App.Web.Areas.Staff.Pages.Shared.Models
@model FilterBuilderViewModel

@{
    Layout = null;
    var attributesJson = JsonSerializer.Serialize(Model.Attributes);
    var usersJson = JsonSerializer.Serialize(Model.Users);
    var teamsJson = JsonSerializer.Serialize(Model.Teams);
    var statusesJson = JsonSerializer.Serialize(Model.Statuses);
    var prioritiesJson = JsonSerializer.Serialize(Model.Priorities);
    var datePresetsJson = JsonSerializer.Serialize(Model.DatePresets);
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Filter Conditions</h5>
        <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Match</span>
            <button type="button" 
                    class="btn btn-sm btn-outline-primary px-3"
                    data-filter-logic="@(Model.Conditions?.Logic ?? "AND")">
                @(Model.Conditions?.Logic ?? "AND")
            </button>
            <span class="text-muted small">of the following conditions</span>
        </div>
    </div>
    <div class="card-body">
        <div data-filter-builder 
             data-attributes="@attributesJson"
             data-users="@usersJson"
             data-teams="@teamsJson"
             data-statuses="@statusesJson"
             data-priorities="@prioritiesJson"
             data-date-presets="@datePresetsJson">
            
            <input type="hidden" name="Conditions.Logic" value="@(Model.Conditions?.Logic ?? "AND")" />
            
            <div class="filter-conditions mb-3">
                @if (Model.Conditions?.Filters?.Any() == true)
                {
                    var index = 0;
                    foreach (var filter in Model.Conditions.Filters)
                    {
                        <div class="filter-condition d-flex gap-2 align-items-start mb-2" data-index="@index">
                            <select name="Conditions.Filters[@index].Field" class="form-select form-select-sm attribute-select" style="width: 200px;">
                                <option value="">Select field...</option>
                                @foreach (var attr in Model.Attributes)
                                {
                                    var isSelected = filter.Field == attr.Field;
                                    <option value="@attr.Field" 
                                            data-type="@attr.Type"
                                            selected="@isSelected">
                                        @attr.Label
                                    </option>
                                }
                            </select>
                            
                            <select name="Conditions.Filters[@index].Operator" class="form-select form-select-sm operator-select" style="width: 180px;">
                                @{
                                    var attrDef = Model.Attributes.FirstOrDefault(a => a.Field == filter.Field);
                                    if (attrDef?.Operators != null)
                                    {
                                        foreach (var op in attrDef.Operators)
                                        {
                                            var isOpSelected = filter.Operator == op.Value;
                                            <option value="@op.Value"
                                                    data-requires-value="@op.RequiresValue.ToString().ToLower()"
                                                    data-multiple="@op.AllowsMultipleValues.ToString().ToLower()"
                                                    selected="@isOpSelected">
                                                @op.Label
                                            </option>
                                        }
                                    }
                                }
                            </select>
                            
                            <div class="value-input-container flex-grow-1" style="min-width: 200px;">
                                <input type="text" 
                                       name="Conditions.Filters[@index].Value" 
                                       class="form-control form-control-sm value-input" 
                                       value="@filter.Value"
                                       placeholder="Value...">
                            </div>
                            
                            <button type="button" class="btn btn-sm btn-outline-danger remove-condition" title="Remove condition">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        index++;
                    }
                }
            </div>
            
            <button type="button" class="btn btn-sm btn-outline-primary" data-add-condition>
                <i class="bi bi-plus-lg me-1"></i> Add Condition
            </button>
            
            @if (Model.ShowHelp)
            {
                <div class="mt-3 small text-muted">
                    <p class="mb-1"><strong>AND</strong> = ticket must match ALL conditions</p>
                    <p class="mb-0"><strong>OR</strong> = ticket must match ANY condition</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const builder = document.querySelector('[data-filter-builder]');
        if (!builder) return;
        
        const attributes = JSON.parse(builder.dataset.attributes || '[]');
        const users = JSON.parse(builder.dataset.users || '[]');
        const teams = JSON.parse(builder.dataset.teams || '[]');
        const statuses = JSON.parse(builder.dataset.statuses || '[]');
        const priorities = JSON.parse(builder.dataset.priorities || '[]');
        const datePresets = JSON.parse(builder.dataset.datePresets || '[]');
        
        let conditionIndex = builder.querySelectorAll('.filter-condition').length;
        
        // Toggle AND/OR logic
        const logicBtn = document.querySelector('[data-filter-logic]');
        const logicInput = builder.querySelector('input[name="Conditions.Logic"]');
        if (logicBtn && logicInput) {
            logicBtn.addEventListener('click', function() {
                const current = this.dataset.filterLogic;
                const newValue = current === 'AND' ? 'OR' : 'AND';
                this.dataset.filterLogic = newValue;
                this.textContent = newValue;
                logicInput.value = newValue;
            });
        }
        
        // Add condition button
        const addBtn = builder.querySelector('[data-add-condition]');
        const container = builder.querySelector('.filter-conditions');
        if (addBtn && container) {
            addBtn.addEventListener('click', function() {
                addCondition();
            });
        }
        
        function addCondition() {
            const html = `
                <div class="filter-condition d-flex gap-2 align-items-start mb-2" data-index="${conditionIndex}">
                    <select name="Conditions.Filters[${conditionIndex}].Field" class="form-select form-select-sm attribute-select" style="width: 200px;">
                        <option value="">Select field...</option>
                        ${attributes.map(a => `<option value="${a.Field}" data-type="${a.Type}">${a.Label}</option>`).join('')}
                    </select>
                    <select name="Conditions.Filters[${conditionIndex}].Operator" class="form-select form-select-sm operator-select" style="width: 180px;">
                        <option value="">Select operator...</option>
                    </select>
                    <div class="value-input-container flex-grow-1" style="min-width: 200px;">
                        <input type="text" name="Conditions.Filters[${conditionIndex}].Value" class="form-control form-control-sm value-input" placeholder="Value...">
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-danger remove-condition" title="Remove condition">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>`;
            container.insertAdjacentHTML('beforeend', html);
            conditionIndex++;
            attachHandlers();
        }
        
        function attachHandlers() {
            // Attribute change handlers
            container.querySelectorAll('.attribute-select').forEach(select => {
                select.removeEventListener('change', handleAttributeChange);
                select.addEventListener('change', handleAttributeChange);
            });
            
            // Remove handlers
            container.querySelectorAll('.remove-condition').forEach(btn => {
                btn.removeEventListener('click', handleRemove);
                btn.addEventListener('click', handleRemove);
            });
        }
        
        function handleAttributeChange(e) {
            const row = e.target.closest('.filter-condition');
            const operatorSelect = row.querySelector('.operator-select');
            const valueContainer = row.querySelector('.value-input-container');
            const selectedAttr = attributes.find(a => a.Field === e.target.value);
            
            if (!selectedAttr) return;
            
            // Update operators
            operatorSelect.innerHTML = selectedAttr.Operators.map(op => 
                `<option value="${op.Value}" data-requires-value="${op.RequiresValue}" data-multiple="${op.AllowsMultipleValues}">${op.Label}</option>`
            ).join('');
            
            // Update value input based on type
            updateValueInput(row, selectedAttr.Type, e.target.value);
        }
        
        function updateValueInput(row, type, field) {
            const container = row.querySelector('.value-input-container');
            const index = row.dataset.index;
            
            let html = '';
            if (type === 'boolean') {
                html = `<select name="Conditions.Filters[${index}].Value" class="form-select form-select-sm">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>`;
            } else if (type === 'status') {
                html = `<select name="Conditions.Filters[${index}].Value" class="form-select form-select-sm">
                    <option value="">Select status...</option>
                    ${statuses.map(s => `<option value="${s.Value}">${s.Label}</option>`).join('')}
                </select>`;
            } else if (type === 'priority') {
                html = `<select name="Conditions.Filters[${index}].Value" class="form-select form-select-sm">
                    <option value="">Select priority...</option>
                    ${priorities.map(p => `<option value="${p.Value}">${p.Label}</option>`).join('')}
                </select>`;
            } else if (type === 'user') {
                html = `<select name="Conditions.Filters[${index}].Value" class="form-select form-select-sm">
                    <option value="">Select user...</option>
                    ${users.map(u => `<option value="${u.Id}">${u.Name}${u.IsDeactivated ? ' (deactivated)' : ''}</option>`).join('')}
                </select>`;
            } else if (type === 'team') {
                html = `<select name="Conditions.Filters[${index}].Value" class="form-select form-select-sm">
                    <option value="">Select team...</option>
                    ${teams.map(t => `<option value="${t.Id}">${t.Name}</option>`).join('')}
                </select>`;
            } else if (type === 'date') {
                html = `<input type="date" name="Conditions.Filters[${index}].Value" class="form-control form-control-sm">`;
            } else {
                html = `<input type="text" name="Conditions.Filters[${index}].Value" class="form-control form-control-sm" placeholder="Value...">`;
            }
            container.innerHTML = html;
        }
        
        function handleRemove(e) {
            e.target.closest('.filter-condition').remove();
        }
        
        attachHandlers();
    });
    </script>
}

