@page "/admin/scheduler/appointment-types/{id}/edit"
@model App.Web.Areas.Admin.Pages.Scheduler.AppointmentTypes.Edit

@{
    var pageTitle = "Edit Appointment Type";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "SchedulerAppointmentTypes";
    ViewData["ExpandSchedulerMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.Scheduler.AppointmentTypes.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))
                    <form asp-page="@RouteNames.Scheduler.AppointmentTypes.Edit" asp-route-id="@Model.Form.Id"
                        method="post" class="py-4" novalidate>
                        <input type="hidden" asp-for="Form.Id" />

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Name"></label>
                            <input type="text" class="form-control @Model.HasError("Name")" asp-for="Form.Name"
                                required />
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Name")</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Mode"></label>
                            <select class="form-select @Model.HasError("Mode")" asp-for="Form.Mode">
                                @foreach (var mode in Model.Modes)
                                {
                                    <option value="@mode.Value">@mode.Label</option>
                                }
                            </select>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Mode")</div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label" asp-for="Form.DefaultDurationMinutes"></label>
                                <div class="input-group">
                                    <input type="number" class="form-control" asp-for="Form.DefaultDurationMinutes"
                                        min="1" max="480" />
                                    <span class="input-group-text">min</span>
                                </div>
                                <div class="form-text">Leave blank to use org default.</div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label" asp-for="Form.BufferTimeMinutes"></label>
                                <div class="input-group">
                                    <input type="number" class="form-control" asp-for="Form.BufferTimeMinutes" min="0"
                                        max="120" />
                                    <span class="input-group-text">min</span>
                                </div>
                                <div class="form-text">Leave blank to use org default.</div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label" asp-for="Form.BookingHorizonDays"></label>
                                <div class="input-group">
                                    <input type="number" class="form-control" asp-for="Form.BookingHorizonDays" min="1"
                                        max="365" />
                                    <span class="input-group-text">days</span>
                                </div>
                                <div class="form-text">Leave blank to use org default.</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Form.IsActive">
                                <label class="form-check-label" asp-for="Form.IsActive">
                                    Active
                                </label>
                                <div class="form-text">When inactive, this appointment type cannot be selected for new
                                    appointments.</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Eligible Staff</label>
                            <div class="form-text mb-2">Select which staff members can be assigned this appointment
                                type.</div>
                            @if (!Model.AllStaff.Any())
                            {
                                <div class="alert alert-info">
                                    No active scheduler staff members found. <a
                                        asp-page="@RouteNames.Scheduler.Staff.Index">Add staff members first</a>.
                                </div>
                            }
                            @foreach (var staff in Model.AllStaff)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="Form.EligibleStaffIds"
                                        value="@staff.Id" id="staff_@staff.Id"
                                        @(Model.Form.EligibleStaffIds?.Contains(staff.Id) == true ? "checked" : "") />
                                    <label class="form-check-label" for="staff_@staff.Id">
                                        @staff.FullName
                                    </label>
                                </div>
                            }
                        </div>

                        <button type="submit" class="btn btn-success">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
