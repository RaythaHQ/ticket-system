@page "/admin/scheduler/email-templates/{id}/edit"
@model App.Web.Areas.Admin.Pages.Scheduler.EmailTemplates.Edit

@{
    var pageTitle = "Edit " + Model.TemplateTypeName;
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "SchedulerEmailTemplates";
    ViewData["ExpandSchedulerMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.Scheduler.EmailTemplates.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))
                    <form asp-page="@RouteNames.Scheduler.EmailTemplates.Edit" asp-route-id="@Model.Form.Id"
                        method="post" class="py-4" novalidate>
                        <input type="hidden" asp-for="Form.Id" />

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Subject"></label>
                            <input type="text" class="form-control @Model.HasError("Subject")" asp-for="Form.Subject"
                                required />
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Subject")</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Content"></label>
                            <textarea class="form-control @Model.HasError("Content")" asp-for="Form.Content"
                                rows="15" required></textarea>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Content")</div>
                            <div class="form-text">You can use HTML and merge variables (see reference panel).</div>
                        </div>

                        <button type="submit" class="btn btn-success">Save changes</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-braces me-2"></i>Merge Variables</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">
                        Insert these variables in your template content. They will be replaced with actual values when
                        the email is sent.
                    </p>
                    <div class="list-group list-group-flush">
                        @foreach (var variable in App.Web.Areas.Admin.Pages.Scheduler.EmailTemplates.Edit.MergeVariables)
                        {
                            <div class="list-group-item px-0 py-1 border-0">
                                <code class="text-primary">{{@variable}}</code>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
