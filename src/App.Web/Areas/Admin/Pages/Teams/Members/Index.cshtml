@page "/admin/teams/{teamId}/members"
@model App.Web.Areas.Admin.Pages.Teams.Members.Index

@{
    Layout = "SidebarLayout";
    ViewData["Title"] = $"Team Members: {Model.Team.Name}";
    ViewData["ActiveMenu"] = "Teams";
    ViewData["ExpandTicketingMenu"] = true;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Team Members</h1>
        <p class="text-muted mb-0">@Model.Team.Name</p>
    </div>
    <a asp-page="@RouteNames.Teams.Edit" asp-route-id="@Model.Team.Id" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Back to Team
    </a>
</div>

@if (Model.CanManageTeams && Model.AvailableUsers.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Add Member</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="AddMember" asp-route-teamId="@Model.Team.Id" class="row g-3">
                <div class="col-md-6">
                    <select asp-for="SelectedUserId" class="form-select">
                        <option value="">-- Select a user --</option>
                        @foreach (var user in Model.AvailableUsers)
                        {
                            <option value="@user.Id">@user.Name (@user.Email)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-plus-lg me-1"></i> Add
                    </button>
                </div>
            </form>
        </div>
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Members (@Model.Members.Count())</h5>
        @if (Model.Team.RoundRobinEnabled)
        {
            <span class="badge bg-success">Round Robin Enabled</span>
        }
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Assignable</th>
                        <th>Last Assigned</th>
                        @if (Model.CanManageTeams)
                        {
                            <th></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Members.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <i class="bi bi-people fs-1 d-block mb-2"></i>
                                No members in this team
                            </td>
                        </tr>
                    }
                    @foreach (var member in Model.Members)
                    {
                        <tr>
                            <td>@member.StaffAdminName</td>
                            <td>@member.StaffAdminEmail</td>
                            <td>
                                @if (member.IsAssignable)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                @if (member.LastAssignedAt.HasValue)
                                {
                                    @member.LastAssignedAt.Value.ToString("MMM dd, yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </td>
                            @if (Model.CanManageTeams)
                            {
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (member.IsAssignable)
                                        {
                                            <form method="post" asp-page-handler="ToggleAssignable" 
                                                  asp-route-teamId="@Model.Team.Id" 
                                                  asp-route-membershipId="@member.Id"
                                                  asp-route-isAssignable="false" class="d-inline">
                                                <button type="submit" class="btn btn-outline-warning" title="Disable assignment eligibility">
                                                    <i class="bi bi-pause"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="post" asp-page-handler="ToggleAssignable" 
                                                  asp-route-teamId="@Model.Team.Id" 
                                                  asp-route-membershipId="@member.Id"
                                                  asp-route-isAssignable="true" class="d-inline">
                                                <button type="submit" class="btn btn-outline-success" title="Enable assignment eligibility">
                                                    <i class="bi bi-play"></i>
                                                </button>
                                            </form>
                                        }
                                        <form method="post" asp-page-handler="RemoveMember" 
                                              asp-route-teamId="@Model.Team.Id" 
                                              asp-route-membershipId="@member.Id" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger" 
                                                    onclick="return confirm('Remove this member from the team?')">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

