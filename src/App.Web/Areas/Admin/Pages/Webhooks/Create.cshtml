@page "/admin/settings/webhooks/create"
@model App.Web.Areas.Admin.Pages.Webhooks.Create

@{
    var pageTitle = "Create webhook";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Webhooks";
    ViewData["ExpandSettingsMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.Webhooks.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))
                    <form asp-page="@RouteNames.Webhooks.Create" method="post" class="py-4" novalidate>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label class="form-label raytha-required" asp-for="Form.Name"></label>
                                <input type="text" class="form-control @Model.HasError("Name")" asp-for="Form.Name" required>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("Name")</div>
                                <div class="form-text">A friendly name to identify this webhook (e.g., "Slack Notifications").</div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label class="form-label raytha-required" asp-for="Form.Url"></label>
                                <input type="url" class="form-control @Model.HasError("Url")" asp-for="Form.Url" required placeholder="https://example.com/webhook">
                                <div class="invalid-feedback">@Model.ErrorMessageFor("Url")</div>
                                <div class="form-text">The URL that will receive webhook POST requests. Must be publicly accessible.</div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label class="form-label raytha-required" asp-for="Form.TriggerType"></label>
                                <select class="form-select @Model.HasError("TriggerType")" asp-for="Form.TriggerType" asp-items="Model.TriggerTypes" required></select>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("TriggerType")</div>
                                <div class="form-text">The event that will trigger this webhook.</div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label class="form-label" asp-for="Form.Description"></label>
                                <textarea class="form-control @Model.HasError("Description")" asp-for="Form.Description" rows="3"></textarea>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("Description")</div>
                            </div>
                        </div>
                        <div class="col-lg-12 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Form.IsActive">
                                <label class="form-check-label" asp-for="Form.IsActive">
                                    Enable this webhook
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success mt-4">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
