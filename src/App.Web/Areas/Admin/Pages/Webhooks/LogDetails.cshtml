@page "/admin/settings/webhooks/log/{id}"
@model App.Web.Areas.Admin.Pages.Webhooks.LogDetails

@{
    var pageTitle = "Webhook Delivery Details";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Webhooks";
    ViewData["ExpandSettingsMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.Webhooks.Logs,
        RouteValues = new Microsoft.AspNetCore.Routing.RouteValueDictionary
{
{ "webhookId", Model.Log.WebhookId.ToString() }
}
    };
}

<div>
    <partial name="_Partials/PageHeading" model="pageTitle" />

    <div class="row">
        <div class="col-xxl-8 col-xl-10 col-lg-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Delivery Information</h6>
                    @if (Model.Log.Success)
                    {
                        <span class="badge bg-success">Success</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Failed</span>
                    }
                </div>
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))

                    <dl class="row mt-3">
                        <dt class="col-sm-3">Webhook</dt>
                        <dd class="col-sm-9">
                            <a asp-page="@RouteNames.Webhooks.Edit"
                                asp-route-id="@Model.Log.WebhookId">@Model.Log.WebhookName</a>
                        </dd>

                        <dt class="col-sm-3">Trigger</dt>
                        <dd class="col-sm-9">@Model.Log.TriggerTypeLabel</dd>

                        <dt class="col-sm-3">Ticket</dt>
                        <dd class="col-sm-9">
                            @if (Model.Log.TicketId.HasValue)
                            {
                                <span>#@Model.Log.TicketId</span>
                            }
                            else
                            {
                                <span class="text-muted">Test payload</span>
                            }
                        </dd>

                        <dt class="col-sm-3">HTTP Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Log.HttpStatusCode.HasValue)
                            {
                                <code>@Model.Log.HttpStatusCode</code>
                            }
                            else
                            {
                                <span class="text-muted">No response</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Attempts</dt>
                        <dd class="col-sm-9">@Model.Log.AttemptCount</dd>

                        <dt class="col-sm-3">Duration</dt>
                        <dd class="col-sm-9">@(Model.Log.Duration ?? "-")</dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.Log.CreatedAt</dd>

                        <dt class="col-sm-3">Completed</dt>
                        <dd class="col-sm-9">@(Model.Log.CompletedAt ?? "-")</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Log.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <strong>Error:</strong> @Model.Log.ErrorMessage
                        </div>
                    }

                    @if (!Model.Log.Success)
                    {
                        <form asp-page-handler="Retry" asp-route-id="@Model.Log.Id" method="post" class="mt-3">
                            <button type="submit" class="btn btn-warning">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-arrow-clockwise me-1" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                        d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z" />
                                    <path
                                        d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466" />
                                </svg>
                                Retry Delivery
                            </button>
                        </form>
                    }
                </div>
            </div>

            <div class="card border-0 shadow mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Request Payload</h6>
                </div>
                <div class="card-body">
                    <pre class="bg-light p-3 rounded"
                        style="max-height: 400px; overflow: auto;"><code>@Model.Log.PayloadJson</code></pre>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Log.ResponseBody))
            {
                <div class="card border-0 shadow mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">Response Body (first 1KB)</h6>
                    </div>
                    <div class="card-body">
                        <pre class="bg-light p-3 rounded"
                            style="max-height: 300px; overflow: auto;"><code>@Model.Log.ResponseBody</code></pre>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
