@page "/admin/profile"
@model App.Web.Areas.Admin.Pages.Profile.Index

@{
    var pageTitle = "Profile";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = pageTitle;
    ViewData["ExpandProfileMenu"] = true;
}
<div class="row mb-4">
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        <partial name="_Partials/PageHeading" model="pageTitle" />
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                <form asp-page="@RouteNames.Profile.Index" method="post" novalidate>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label class="form-label raytha-required" asp-for="Form.FirstName"></label>
                                <input type="text" class="form-control @Model.HasError("FirstName")"
                                    asp-for="Form.FirstName" required>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("FirstName")</div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label class="form-label raytha-required" asp-for="Form.LastName"></label>
                                <input type="text" class="form-control @Model.HasError("LastName")"
                                    asp-for="Form.LastName" required>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("LastName")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Form.EmailAddress"></label>
                            <input type="email" class="form-control @Model.HasError("EmailAddress")"
                                asp-for="Form.EmailAddress" readonly>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("EmailAddress")</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-4">Save changes</button>
                </form>
            </div>
        </div>

        <!-- Notification Preferences -->
        <div class="card border-0 shadow mb-4">
            <div class="card-header">
                <h5 class="mb-0">Notification Preferences</h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">Configure which email notifications you want to receive.</p>
                <form method="post" asp-page-handler="UpdateNotifications">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Event Type</th>
                                    <th class="text-center">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pref in Model.NotificationPreferences)
                                {
                                    <tr>
                                        <td>@pref.EventTypeLabel</td>
                                        <td class="text-center">
                                            <div class="form-check d-flex justify-content-center">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="emailPrefs[@pref.EventType]" 
                                                       value="true"
                                                       @(pref.EmailEnabled ? "checked" : "") />
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Save Notification Preferences</button>
                </form>
            </div>
        </div>
    </div>
</div>