@page "/admin/sla-rules/create"
@model App.Web.Areas.Admin.Pages.SlaRules.Create

@{
    var pageTitle = "Create SLA rule";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "SlaRules";
    ViewData["ExpandTicketingMenu"] = true;

    BackLinkOptions back = new BackLinkOptions
    {
        Page = RouteNames.SlaRules.Index
    };
}

<div>
    <div class="row mb-4">
        <partial name="_Partials/PageHeading" model='ViewData["Title"]' />
        <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-body">
                    @(await Html.PartialAsync("_Partials/BackToList", back))
                    <form asp-page="@RouteNames.SlaRules.Create" method="post" class="py-4" novalidate>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label class="form-label raytha-required" asp-for="Form.Name"></label>
                                <input type="text" class="form-control @Model.HasError("Name")" asp-for="Form.Name"
                                    required>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("Name")</div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label class="form-label" asp-for="Form.Description"></label>
                                <textarea class="form-control @Model.HasError("Description")" asp-for="Form.Description"
                                    rows="2"></textarea>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("Description")</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label raytha-required"
                                        asp-for="Form.TargetResolutionValue"></label>
                                    <div class="input-group">
                                        <input type="number"
                                            class="form-control @Model.HasError("TargetResolutionValue")"
                                            asp-for="Form.TargetResolutionValue" min="1" required>
                                        <select class="form-select" asp-for="Form.TargetResolutionUnit"
                                            style="max-width: 120px;">
                                            <option value="minutes">Minutes</option>
                                            <option value="hours" selected>Hours</option>
                                            <option value="days">Days</option>
                                        </select>
                                    </div>
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("TargetResolutionValue")</div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.Priority"></label>
                                    <input type="number" class="form-control @Model.HasError("Priority")"
                                        asp-for="Form.Priority" min="0">
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("Priority")</div>
                                    <div class="form-text">Lower numbers are evaluated first</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.ConditionPriority"></label>
                                    <select class="form-select @Model.HasError("ConditionPriority")"
                                        asp-for="Form.ConditionPriority">
                                        <option value="">Any Priority</option>
                                        <option value="urgent">Urgent</option>
                                        <option value="high">High</option>
                                        <option value="normal">Normal</option>
                                        <option value="low">Low</option>
                                    </select>
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("ConditionPriority")</div>
                                    <div class="form-text">Leave blank to match all tickets</div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.ConditionCategory"></label>
                                    <input type="text" class="form-control @Model.HasError("ConditionCategory")"
                                        asp-for="Form.ConditionCategory">
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("ConditionCategory")</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-check">
                                <input class="form-check-input @Model.HasError("BusinessHoursEnabled")" type="checkbox"
                                    asp-for="Form.BusinessHoursEnabled">
                                <label class="form-check-label" asp-for="Form.BusinessHoursEnabled">
                                    Only count business hours
                                </label>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("BusinessHoursEnabled")</div>
                                <div class="form-text">SLA time will only accumulate during configured business hours
                                </div>
                            </div>
                        </div>

                        <div class="row" id="businessHoursConfig">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.BusinessHoursStart"></label>
                                    <input type="time" class="form-control @Model.HasError("BusinessHoursStart")"
                                        asp-for="Form.BusinessHoursStart">
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("BusinessHoursStart")</div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Form.BusinessHoursEnd"></label>
                                    <input type="time" class="form-control @Model.HasError("BusinessHoursEnd")"
                                        asp-for="Form.BusinessHoursEnd">
                                    <div class="invalid-feedback">@Model.ErrorMessageFor("BusinessHoursEnd")</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-check">
                                <input class="form-check-input @Model.HasError("NotifyAssignee")" type="checkbox"
                                    asp-for="Form.NotifyAssignee" checked>
                                <label class="form-check-label" asp-for="Form.NotifyAssignee">
                                    Notify assignee when SLA is breached
                                </label>
                                <div class="invalid-feedback">@Model.ErrorMessageFor("NotifyAssignee")</div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success mt-4">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
