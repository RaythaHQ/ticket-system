@page "/admin/sla-rules"
@model App.Web.Areas.Admin.Pages.SlaRules.Index
@using App.Web.Areas.Shared.Models

@{
    var pageTitle = "SLA Rules";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "SlaRules";
    ViewData["ExpandTicketingMenu"] = true;
}

<div>
    <partial name="_Partials/PageHeading" model="pageTitle" />

    @if (Model.CanManageTickets)
    {
        @(await Html.PartialAsync("_Partials/TableCreateAndSearchBar", new BaseTableCreateAndSearchBarViewModel
        {
            Pagination = Model.ListView,
            EntityName = "SLA rule",
            CreateActionName = RouteNames.SlaRules.Create
        }))
        }
    else
    {
        @(await Html.PartialAsync("_Partials/TableCreateAndSearchBar", new BaseTableCreateAndSearchBarViewModel
        {
            Pagination = Model.ListView,
            EntityName = "SLA rule",
            CreateActionName = ""
        }))
        }

    <div class="raytha-data-card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-centered table-nowrap mb-0 rounded">
                    <thead class="thead-light">
                        <tr>
                            <th>Priority</th>
                            <th>Name</th>
                            <th>Target Resolution</th>
                            <th>Business Hours</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th class="border-0 rounded-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.ListView.Items.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    <i class="bi bi-hourglass-split fs-1 d-block mb-2"></i>
                                    No SLA rules found
                                </td>
                            </tr>
                        }
                        @foreach (var rule in Model.ListView.Items.OrderBy(r => r.Priority))
                        {
                            <tr class="@(!rule.IsActive ? "table-secondary" : "")">
                                <td>
                                    <span class="badge bg-info">@rule.Priority</span>
                                </td>
                                <td>
                                    <a asp-page="@RouteNames.SlaRules.Edit" asp-route-id="@rule.Id" class="fw-semibold">
                                        @rule.Name
                                    </a>
                                    <br>
                                    <small class="text-muted">@(rule.Description.Length > 50 ? rule.Description.Substring(0,
                                                                            47) + "..." : rule.Description)</small>
                            </td>
                            <td>@rule.TargetResolutionTime</td>
                            <td>
                                @if (rule.BusinessHours == "Yes")
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>
                                    @if (rule.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Inactive</span>
                                    }
                                </td>
                                <td>@rule.CreationTime</td>
                                <td>
                                    @if (Model.CanManageTickets)
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="@RouteNames.SlaRules.Edit" asp-route-id="@rule.Id"
                                                class="btn btn-outline-secondary">
                                                Edit
                                            </a>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <partial name="_Partials/TablePagination" model="@Model.ListView" />
            </div>
        </div>
    </div>
</div>
